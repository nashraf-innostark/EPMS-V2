@model EPMS.WebModels.ViewModels.AboutUs.AboutUsViewModel

@{
    ViewBag.Title = EPMS.WebModels.Resources.WebsiteClient.Common.Common.TitleAboutUs;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
    var Date = DateTime.Now;
}

<div id="page_header" class="gradient bottom-shadow">
    <div class="bgback bg3"></div>

    <div class="container">
        <div class="row">
            <div class="span6">
                <ul class="breadcrumbs fixclear">
                    <li><a href="/Home/Index">@EPMS.WebModels.Resources.WebsiteClient.Common.Common.HomePage</a></li>
                    <li><a href="/NewsAndArticle/Index/1">@EPMS.WebModels.Resources.WebsiteClient.Common.Common.TitleAboutUs</a></li>
                </ul>
                <span id="current-date">@Date.ToString("dddd, dd MMMM yyyy")</span>
            </div>
            <div class="span6">
                <div class="header-titles">
                    <h2>@EPMS.WebModels.Resources.WebsiteClient.Common.Common.TitleAboutUs</h2>
                </div>
            </div>
        </div><!-- end row -->
    </div>
    <div class="shadowUP"></div>
</div><!-- end page_header -->

<section id="content">
    <div class="container">

        <div id="mainbody">
            @if (direction == "ltr")
            {
                <div class="row">
                    <div class="span12 directionR">
                        <h1 class="page-title">@Model.AboutUs.Title</h1>
                        <div class="itemView clearfix eBlog">
                            @*<div class="itemHeader">
                                    <div class="post_details">
                                        <span class="infSep"> / </span>
                                        <span class="itemDateCreated"><span class="icon-calendar"></span> @Model.WebsiteService.RecCreatedDate.ToString("MMMM dd, yyyy")</span>
                                    </div>
                                </div>*@<!-- end itemheader -->
                            <div class="itemBody">
                                <p style="text-align: justify">@Model.AboutUs.ContentEn</p>
                            </div><!-- end item body -->

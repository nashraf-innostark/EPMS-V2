@using System.Configuration
@model EPMS.Models.MenuModels.ImageSliderModel

@{
    Layout = null;
    var direction = EPMS.Website.Resources.Shared.Common.TextDirection;
    var link = ConfigurationManager.AppSettings["SliderImages"];
    string textClass = "";
}

<div id="slideshow" class="gradient">
    <!--  <div  style="margin: 0px; padding: 0px; position: fixed; left: 0px; top: 0px; width: 100% !important; height: 100%; opacity: 0.5;background: transparent url(images/02.png);"></div> -->
    <div class="iosSlider">
        @if (Model.ImageSliders != null)
        {
            <div class="slider">
                @foreach (var imageSlider in Model.ImageSliders)
                {
                    <div class="item">
                        @if (imageSlider.ImageName != null)
                        {
                            <img style="" src="@link@imageSlider.ImageName" alt="" />
                        }
                        else
                        {
                            <img style="" src="/Images/ImageNoAvailableBig.jpg" alt="" />
                        }
                        @switch (imageSlider.Position)
                        {
                            case 1:
                                textClass = "fromtop";
                                break;
                            case 2:
                                textClass = "frombottom";
                                break;
                            case 3:
                                textClass = "";
                                break;
                            case 4:
                                textClass = "fromright";
                                break;
                        }
                        <div class="caption style1 @textClass">
                            <h2 class="main_title">@imageSlider.TitleEn</h2>
                            <h3 class="title_big">@imageSlider.SubTitleEn</h3>
                            <a href="@imageSlider.Link" class="more"><img src="/sliders/iosslider/arr01.png" alt=""></a>
                            <h4 class="title_small descp-@imageSlider.SliderId"></h4>
                            <script>
                                var descp = '@Html.Raw(imageSlider.Description)';
                                var regex = /(<([^>]+)>)/ig;
                                var result = descp.replace(regex, "");
                                jQuery(".descp-@imageSlider.SliderId").text(result);
                            </script>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="prev">
            <div class="btn-label">Previous</div>
        </div>

        <div class="next">
            <div class="btn-label">Next</div>
        </div>

        <div class="selectorsBlock bullets">
            <div class="selectors">
                <div class="item first selected"></div>
                @for (var i = 1; i < Model.ImageSliders.Count(); i++)
                {
                    <div class="item"></div>
                }
            </div>
        </div>

    </div><!-- end iosSlider -->
    <div class="scrollbarContainer"></div>
</div><!-- end slideshow -->

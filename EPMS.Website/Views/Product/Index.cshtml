@section scripts
{
    <script>
        var siteUrl;
        jQuery(document).ready(function () {
            siteUrl = jQuery("#siteURL").val();
        });
        jQuery(document).on('change', '.filter', function () {
            var sortBy = parseInt(jQuery("#SortBy").val());
            if (sortBy == 1 || sortBy == 3 || sortBy == 5) {
                jQuery("#SortDirection").val("asc");
            } else {
                jQuery("#SortDirection").val("desc");
            }
            if (sortBy == 1 || sortBy == 2) {
                jQuery("#sortCol").val("1");
            }
            else if (sortBy == 5 || sortBy == 6) {
                jQuery("#sortCol").val("2");
            }
            else if (sortBy == 3 || sortBy == 4) {
                jQuery("#sortCol").val("3");
            }
            // submit from
            jQuery("#filter-products").submit();
        });
        jQuery(document).on('click', '.page-button', function () {
            jQuery('#pagination a').removeClass("active");
            this.parentElement.classList.add("active");
            var pageNo = parseInt(this.textContent);
            var length = parseInt(jQuery('#displayLength').val());
            var displayStart = (pageNo -1) * length;
            jQuery('#displayStart').val(displayStart);
            // submit from
            jQuery("#filter-products").submit();
        });
        jQuery(document).on('click', '.first-page', function () {
            jQuery('#pagination a').removeClass("active");
            this.parentElement.classList.add("active");
            jQuery('#displayStart').val(0);
            // submit from
            jQuery("#filter-products").submit();
        });
        jQuery(document).on('click', '.last-page', function () {
            jQuery('#pagination a').removeClass("active");
            this.parentElement.classList.add("active");
            var totalCount = parseInt('@Model.SearchRequest.TotalCount');
            var length = parseInt(jQuery('#displayLength').val());
            jQuery('#displayStart').val(getLastPage(totalCount, length));
            // submit from
            jQuery("#filter-products").submit();
        });
        function getLastPage(totalCount, length) {
            var totalPages = Math.ceil(totalCount / length);
            return ((totalPages - 1) * length);
        }
    </script>
}
@using System.Configuration
@using System.Globalization
@using EPMS.WebModels.Resources.WebsiteClient.Product
@using EPMS.Website.Resources.Shared
@model EPMS.WebModels.ViewModels.Product.ProductDetailViewModel

@{
    ViewBag.Title = Product.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = Common.TextDirection;
    string requestFrom = "";
    if (ViewBag.From != null)
    {
        requestFrom = ViewBag.From.ToString();
    }
    string itemImageFolder = "";
    if (requestFrom == "Inventory")
    {
        itemImageFolder = ConfigurationManager.AppSettings["InventoryImage"];
    }
    if (requestFrom == "Sections")
    {
        itemImageFolder = ConfigurationManager.AppSettings["ProductImage"];
    }
    var siteURL = ConfigurationManager.AppSettings["SiteURL"];
    string noImage = siteURL + "/images/noimage_department.png";
    DateTime today = DateTime.Now;
    var rootProducts = Model.ProductSections.Where(x => x.ParentSectionId == null).ToList();
    string link = "";
}


@section scripts
{
    <link href="~/Content/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/Content/flexslider.css" rel="stylesheet" />

    <script src="~/Scripts/flexslider.min.js"></script>
    <script src="~/Scripts/zoomsl-3.0.min.js"></script>
    <script src="~/Scripts/jquery.fancybox.pack.js"></script>

    <script>
        var siteUrl;
        jQuery(document).ready(function () {
            siteUrl = jQuery("#siteURL").val();
            singleProduct();

            function singleProduct() {
                /* Product Images Carousel */
                jQuery('#product-carousel').flexslider({
                    animation: "slide",
                    controlNav: false,
                    animationLoop: false,
                    directionNav: false,
                    slideshow: false,
                    itemWidth: 80,
                    itemMargin: 0,
                    start: function (slider) {
                        setActive(jQuery('#product-carousel li:first-child img'));
                        slider.find('.right-arrow').click(function () {
                            slider.flexAnimate(slider.getTarget("next"));
                        });
                        slider.find('.left-arrow').click(function () {
                            slider.flexAnimate(slider.getTarget("prev"));
                        });
                        slider.find('img').click(function () {
                            var large = jQuery(this).attr('data-large');
                            setActive(jQuery(this));
                            jQuery('#product-slider img').fadeOut(300, changeImg(large, jQuery('#product-slider img')));
                            jQuery('#product-slider a.fullscreen-button').attr('href', large);
                        });

                        function changeImg(large, element) {
                            var element = element;
                            var large = large;
                            setTimeout(function () { startF(); }, 300);

                            function startF() {
                                element.attr('src', large);
                                element.attr('data-large', large);
                                element.fadeIn(300);
                            }
                        }

                        function setActive(el) {
                            var element = el;
                            jQuery('#product-carousel img').removeClass('active-item');
                            element.addClass('active-item');
                        }
                    }
                });

                /* FullScreen Button */
                jQuery('a.fullscreen-button').click(function (e) {
                    e.preventDefault();
                    var target = jQuery(this).attr('href');
                    jQuery('#product-carousel a.fancybox[href="' + target + '"]').trigger('click');
                });
                /* Cloud Zoom */
                jQuery("#zoom01").imagezoomsl({
                    zoomrange: [3, 3],
                    magnifierpos: "left"
                });
                /* FancyBox */
                jQuery(".fancybox").fancybox();
            }

        });
    </script>
}


<div id="page_header" class="gradient bottom-shadow">
    <div class="bgback bg3"></div>

    <div class="container">
        <div class="row">
            <div class="span6">
                <ul class="breadcrumbs fixclear">
                    <li><a href="@siteURL/Home/Index">@EPMS.WebModels.Resources.WebsiteClient.Common.Common.HomePage</a></li>
                    <li><a href="#">@Product.OurProducts</a></li>
                    <li>@Product.ProductsPage</li>
                </ul>
                <span id="current-date">@today.ToString("dddd, dd MMMM yyyy", CultureInfo.CreateSpecificCulture("en-US"))</span>
            </div>
            <div class="span6">
                <div class="header-titles">
                    <h2>@Product.ProductsPage</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="shadowUP"></div>
</div>
<section id="content">
    <div class="container">
        <div id="mainbody">
            <div class="row">
                <div class="span9 rightSide">
                    <div class="row product-page">
                        <div class="span4 product-single-image">
                            <div id="product-slider">
                                <ul class="slides">
                                    <li>
                                        @{
                                            string path = "";
                                            if (requestFrom == "Inventory")
                                            {
                                                path = !string.IsNullOrEmpty(Model.Product.ItemImage) ? itemImageFolder + Model.Product.ItemImage : noImage;
                                            }
                                            if (requestFrom == "Sections")
                                            {
                                                path = !string.IsNullOrEmpty(Model.Product.ProductImage) ? itemImageFolder + Model.Product.ProductImage : noImage;
                                            }
                                            <a class="fullscreen-button" href="@path" id="">
                                                <img class="" src="@path" alt="" id="zoom01" />
                                                <div class="product-fullscreen">
                                                    <i class="fa fa-arrows-alt"></i>
                                                </div>
                                            </a>
                                        }
                                    </li>
                                </ul>
                            </div>
                            <div id="product-carousel">
                                <ul class="slides">
                                    @switch (requestFrom)
                                    {
                                        case "Inventory":
                                            if (Model.Product.ItemImages.Any())
                                            {
                                                foreach (var image in Model.Product.ItemImages)
                                                {
                                                    <li>
                                                        @{
                                                    string imagePath = itemImageFolder + image.ItemImagePath;
                                                    <a class="fancybox" rel="product-images" href="@imagePath"></a>
                                                            <img src="@imagePath" data-large="@imagePath" alt="" />
                                                        }
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li>
                                                    @{
                                                        <a class="fancybox" rel="product-images" href="@noImage"></a>
                                                        <img src="@noImage" data-large="@noImage" alt="" />
                                                    }
                                                </li>
                                            }
                                            break;
                                        case "Sections":
                                            if (Model.Product.ProductImages.Any())
                                            {
                                                foreach (var image in Model.Product.ProductImages)
                                                {
                                                    <li>
                                                        @{
                                                    string imagePath = itemImageFolder + image.ProductImagePath;
                                                    <a class="fancybox" rel="product-images" href="@imagePath"></a>
                                                            <img src="@imagePath" data-large="@imagePath" alt="" />
                                                        }
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li>
                                                    @{
                                                        <a class="fancybox" rel="product-images" href="@noImage"></a>
                                                        <img src="@noImage" data-large="@noImage" alt="" />
                                                    }
                                                </li>
                                            }
                                            break;
                                    }
                                </ul>
                                <div class="product-arrows">
                                    <div class="left-arrow">
                                        <i class="fa fa-arrow-left"></i>
                                    </div>
                                    <div class="right-arrow">
                                        <i class="fa fa-arrow-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="span5">
                            <div class="main-data">
                                <p class="name">
                                    @if (ViewBag.From != null)
                                    {
                                        if (ViewBag.From.ToString() == "Inventory")
                                        {
                                            @(direction == "ltr" ? Model.Product.ItemNameEn : Model.Product.ItemNameAr)
                                        }
                                        if (ViewBag.From.ToString() == "Sections")
                                        {
                                            @(direction == "ltr" ? Model.Product.ProductNameEn : Model.Product.ProductNameAr)
                                        }
                                    }
                                </p>
                                @if (Model.Product.ItemVariationId != null)
                                {
                                    <p><strong>@Product.SKU:</strong> @Model.Product.SKUCode</p>
                                }
                                <p class="small_desc">Pellentesque habitant morbi tristique senectus et netus et malesuada fames</p>
                                @if (!string.IsNullOrEmpty(Model.Product.DiscountedPrice))
                                {
                                    <p class="regular_price">@Product.Price: <span>@Model.Product.ProductPrice</span><span>SR</span></p>
                                    <p class="price">
                                        <span>@Model.Product.DiscountedPrice</span><span>SR</span>
                                    </p>
                                    <p>
                                        @Product.YouWillSave:
                                        @{
                                            @: <strong>
                                                                         var actualPrice = Convert.ToDecimal(Model.Product.ProductPrice);
                                                                         var discountedPrice = Convert.ToDecimal(Model.Product.DiscountedPrice);
                                                                        @: @(actualPrice - discountedPrice)
                                                                        @:( @Math.Round((actualPrice / discountedPrice), 2) %)
                                                                        @: </strong>
                                        }
                                    </p>
                                }

                                <div class="to_cart">

                                    @if (Model.Product.ItemVariationId != null && Model.Product.Sizes.Any())
                                    {
                                        <div class="quantitiy">
                                            <label for="qty">@Product.Size:</label>
                                            @(direction == "ltr" ? Html.DropDownListFor(m => m.Product.ProductSize, new SelectList(Model.Product.Sizes, "SizeId", "SizeNameEn"), new { @id = "Size" }) :
                                                  Html.DropDownListFor(m => m.Product.ProductSize, new SelectList(Model.Product.Sizes, "SizeId", "SizeNameAr"), new { @id = "Size" }))
                                        </div>
                                    }
                                    @if (Model.Product.ItemVariationId == null && !string.IsNullOrEmpty(Model.Product.ProductSize))
                                    {
                                        <div class="quantitiy">
                                            <label for="qty">@Product.Size:</label>
                                            @Html.DropDownListFor(m => m.Product.ProductSize, new[]
                                            {
                                                new SelectListItem {Value = "0", Text = Model.Product.ProductSize}
                                            }, new { @id = "Size" })
                                        </div>
                                    }
                                    <div class="quantitiy">
                                        <label for="qty">@Product.Quantity:</label>
                                        <input type="text" id="Quantity" class="inputbox">
                                    </div>
                                    <a class="addtocart btn btn-flat" onclick="addToCart(@Model.Product.ProductId)">@Product.AddToCart</a>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span9">
                            <div class="tabbable tabs_style2">
                                <ul class="nav fixclear">
                                    <li class="active"><a href="#shop-tab1" data-toggle="tab">@Product.Description </a></li>
                                    <li><a href="#shop-tab2" data-toggle="tab">@Product.Specifications</a></li>
                                </ul>

                                <div class="tab-content">
                                    <div class="tab-pane active" id="shop-tab1">
                                        <p>@(direction == "ltr" ? Model.Product.ProductDescEn : Model.Product.ProductDescAr)</p>
                                    </div>
                                    <div class="tab-pane" id="shop-tab2">
                                        <p>@(direction == "ltr" ? Model.Product.ProductSpecificationEn : Model.Product.ProductSpecificationAr)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span3  directionR">
                    <h1 class="page-title">@Product.PoductClassification</h1>
                    <div class="css-treeview">
                        <ul>
                            <li class="phy">
                                @foreach (var productSection in rootProducts)
                                {
                                    var childName = "";
                                    if (direction == "ltr")
                                    {
                                        childName = string.IsNullOrEmpty(productSection.SectionNameEn) ? productSection.InventoryDepartment.DepartmentNameEn : productSection.SectionNameEn;
                                    }
                                    else
                                    {
                                        childName = string.IsNullOrEmpty(productSection.SectionNameAr) ? productSection.InventoryDepartment.DepartmentNameAr : productSection.SectionNameAr;
                                    }

                                    {
                                        if (productSection.InventoyDepartmentId != null)
                                        {
                                            link = siteURL + "/Product/Index/" + productSection.InventoyDepartmentId + "?from=Inventory";
                                        }
                                        else
                                        {
                                            link = siteURL + "/Product/Index/" + productSection.SectionId + "?from=Sections";
                                        }
                                    }
                                    <input type="checkbox" id="item-0" />
                                    <label for="item-0"><a href="@link">@childName</a></label>
                                    if (productSection.InventoryDepartment != null)
                                    {
                                        <ul>
                                            @foreach (var department in productSection.InventoryDepartment.InventoryDepartments)
                                            {
                                                <li class="phy">
                                                    @{
                                                childName = direction == "ltr" ? department.DepartmentNameEn : department.DepartmentNameAr;
                                                link = siteURL + "/Product/Index/" + department.DepartmentId + "?from=Inventory";
                                                <input type="checkbox" id="item-0-0" />
                                                        <label for="item-0-0"><a href="@link">@childName</a></label>
                                                    }
                                                    @if (department.InventoryDepartments.Any())
                                                    {
                                                        <ul>
                                                            @foreach (var childDepartment in department.InventoryDepartments)
                                                            {
                                                                <li class="phy">
                                                                    @{
                                                                childName = direction == "ltr" ? childDepartment.DepartmentNameEn : childDepartment.DepartmentNameAr;
                                                                link = siteURL + "/Product/Index/" + childDepartment.DepartmentId + "?from=Inventory";
                                                                <input type="checkbox" id="item-0-0-0" />
                                                                        <label for="item-0-0-0"><a href="@link">@childName</a></label>
                                                                    }
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                </li>
                                            }

                                        </ul>
                                    }
                                    if (productSection.ProductSections != null && productSection.ProductSections.Any())
                                    {
                                        <ul>
                                            @foreach (var section in productSection.ProductSections)
                                            {
                                                <li class="phy">
                                                    @{
                                                childName = direction == "ltr" ? section.SectionNameEn : section.SectionNameAr;
                                                link = siteURL + "/Product/Index/" + section.SectionId + "?from=Sections";
                                                <input type="checkbox" id="item-0-0" />
                                                        <label for="item-0-0"><a href="@link">@childName</a></label>
                                                    }
                                                    @if (section.ProductSections.Any())
                                                    {
                                                        <ul>
                                                            @foreach (var subSection in section.ProductSections)
                                                            {
                                                                <li class="phy">
                                                                    @{
                                                                childName = direction == "ltr" ? subSection.SectionNameEn : subSection.SectionNameAr;
                                                                link = siteURL + "/Product/Index/" + subSection.SectionId + "?from=Sections";
                                                                <input type="checkbox" id="item-0-0-0" />
                                                                        <label for="item-0-0-0"><a href="@link">@childName</a></label>
                                                                    }
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                </li>
                                            }

                                        </ul>
                                    }
                                    <br />
                                }
                            </li>

                        </ul>
                    </div>

                    <h1 class="page-title margintop10">@Product.Catalog</h1>
                    <a href="~/Catalogue/Index"><img src="@siteURL/images/shop_images/catalog.jpg"></a>
                </div>
            </div><!-- end row -->
        </div>
    </div><!-- end page_header -->
</section>
<body class="">
    @{ Html.RenderPartial("~/Views/Shared/_WebsiteLogin.cshtml");}

    <div id="page_wrapper">
        <header id="header" class="style2 header2">
            <div class="fullWidth">
                <div class="container headerTopLinks">
                    <div class=" header-social-icons multicolor ">
                        <ul>
                            <li><a href="#" class="twitter"><br></a></li>
                            <li><a href="#" class="facebook"><br></a></li>
                            <li><a href="#" class="skype"><br></a></li>
                            <li><a href="#" class="linkedin"><br></a></li>
                            <li><a href="#" class="rss"><br></a></li>
                            <li><a href="#" class="deviantart"><br></a></li>
                            <li><a href="#" class="googleplus"><br></a></li>
                        </ul>
                    </div>
                    <ul class="topnav navRight">

                        <li><a href="#login_panel" data-rel="prettyPhoto[login_panel]">Login</a></li>
                    </ul><!-- end topnav // right aligned -->
                    <ul class="topnav navLeft">
                        <li class="drop">
                            <a href="~/ShoppingCart/Index">Cart</a>
                            <div class="pPanel">
                                <div class="inner">
                                    <span class="cart_details">Number of items 3<a href="#" class="checkout">Checkout<span class="icon-chevron-right"></span></a></span>
                                </div>
                            </div>
                        </li>
                        <li class="languages drop">
                            <a href="#"><span class="icon-globe icon-white"></span> Language</a>
                            <div class="pPanel">
                                <ul class="inner">
                                    <li><a href="#">Arabic </a></li>
                                    <li class="active"><a href="#">English <span class="icon-ok"></span></a></li>

                                </ul>
                            </div>
                        </li>
                    </ul><!-- end topnav // left aligned -->
                </div>
            </div>
            <div class="container">
                <!-- logo -->
                <h1 id="logo"><a href="~/Home/Index"><img src="~/images/logo.png" alt="شركة مسار العلمية"></a></h1>
                <!-- search -->
                <div id="search">
                    <a href="#" class="searchBtn"><span class="icon-search icon-white"></span></a>
                    <div class="search">
                        <form action="http://www.google.com/search" method="get" onsubmit="Gsitesearch(this)" target="_blank">
                            <input name="q" type="hidden" />
                            <input name="qfront" maxlength="20" class="inputbox" type="text" size="20" value="Search ..." onblur="if (this.value=='') this.value='Search ...';" onfocus="if (this.value=='Search ...') this.value='';" />
                            <input type="submit" value="go" class=" icon-search" />
                        </form>
                    </div>
                </div><!-- end search -->
                @{Html.RenderAction("Index", "WebsiteMenu", new { area = "" });}
            </div>
        </header>

        @RenderBody()

        @{Html.RenderAction("Index", "WebsiteFooter", new { area = "" });}
        @*@{ Html.RenderPartial("~/Views/Shared/_WebsiteFooter.cshtml");}*@

    </div>
    <input type="hidden" id="siteURL" value="@ConfigurationManager.AppSettings["SiteURL"]" />
    @*<a href="#" id="totop">TOP</a>*@

    <!--////////////////// Load JS Files -->
    <script src="~/Sliders/iosslider/jquery.iosslider.min.js"></script>
    <script src="~/Sliders/iosslider/jquery.iosslider.kalypso.js"></script>
    <!-- Carousels (by CarouFredSel) -->
    <script src="~/Scripts/jquery.carouFredSel.js" type="text/javascript"></script>
    <!-- JavaScript at the bottom for fast page loading -->
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script><!-- Bootstrap Framework -->
    <script type="text/javascript" src="~/Scripts/plugins.js"></script><!-- jQuery Plugins -->
    <script type="text/javascript" src="~/addons/superfish_responsive/superfish_menu.js"></script><!-- Superfish Menu -->
    <script src="~/Scripts/Functions/scriptIST.js"></script>
    <script src="~/Scripts/Layout/LayoutScripts.js"></script>
    <script type="text/javascript" src="~/Scripts/kalypso_script.js"></script><!-- custom scripts file -->
    <!-- prettyphoto scripts & styles -->
    <link rel="stylesheet" href="~/addons/prettyphoto/prettyPhoto.css" type="text/css" />
    <script type="text/javascript" src="~/addons/prettyphoto/jquery.prettyPhoto.js"></script>

</body>

</html>

@using System.Configuration
@model EPMS.Models.MenuModels.WebsiteFooterMenuModel

@{
    Layout = null;
    var direction = EPMS.Website.Resources.Shared.Common.TextDirection;
    var siteURL = ConfigurationManager.AppSettings["SiteURL"];
}

<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="span5 footerRight">
                <h3 class="m_title">Menu</h3>
                <ul class="menu">
                    <li><a href="@siteURL/AboutUs/Detail">About us</a></li>
                    <li><a href="#">Labs Preperation</a></li>
                    <li><a href="#">Labs Furnishing</a></li>
                    <li><a href="#">Kindergarden</a></li>
                    <li><a href="#">Learning Games</a></li>
                    <li><a href="#">Training Services</a></li>
                    <li><a href="#">Neo Horizon</a></li>
                    <li><a href="#">News And Articles</a></li>
                    <li><a href="@siteURL/ContactUs/Detail">Contact Us</a></li>
                </ul><!-- end footer menu -->
            </div>
            <div class="span4 footerMid">
                <div class="newsletter-signup">
                    <h3 class="m_title">@EPMS.WebModels.Resources.WebsiteClient.NewsAndArticles.NewsAndArticles.LatestNews</h3>
                    <ul class="menu">
                        @if (Model.NewsAndArticles != null && Model.NewsAndArticles.Any())
                        {
                            foreach (var item in Model.NewsAndArticles.ToList())
                            {
                                <li>
                                    <a href="#" onclick="window.location.href = '@(ConfigurationManager.AppSettings["SiteURL"])/NewsAndArticle/Detail/@item.NewsArticleId'">@(direction == "ltr" ? item.TitleEn : item.TitleAr)</a>
                                    @if (direction == "ltr")
                                    {
                                        <p><span>@item.RecCreatedDt.ToShortDateString()</span><br />@item.ContentEn.Substring(0, item.ContentEn.Length > 100 ? 100 : item.ContentEn.Length)...</p>
                                    }
                                    else
                                    {
                                        <p><span>@item.RecCreatedDt.ToShortDateString()</span><br />@item.ContentAr.Substring(0, item.ContentAr.Length > 100 ? 100 : item.ContentAr.Length)...</p>
                                    }
                                </li>
                            }
                        }
                    </ul><!-- end footer menu -->

                </div><!-- end newsletter-signup -->
            </div>
        @if (Model.ContactUs != null)
        {
            <div class="span3 footerCont">
                <div class="contact-details">
                    <h3 class="m_title">@EPMS.WebModels.Resources.WebsiteClient.ContactUs.ContactUs.Title</h3>
                    <p>
                        @if (direction == "ltr")
                        {
                            @Model.ContactUs.Title<br />
                            @Model.ContactUs.Address
                        }
                        else
                        {
                            @Model.ContactUs.TitleAr<br />
                            @Model.ContactUs.AddressAr
                        }
                    </p>

                    <p>
                        <strong>@EPMS.WebModels.Resources.WebsiteClient.ContactUs.ContactUs.Telephone: </strong>@Model.ContactUs.Phone<br />
                        <strong>@EPMS.WebModels.Resources.WebsiteClient.ContactUs.ContactUs.Email: </strong> <a href="#">@Model.ContactUs.FormEmail</a>
                    </p>

                    <p><a href="http://www.google.com/maps/place/@Model.ContactUs.Latitude,@Model.ContactUs.Longitude" target="_blank" class="map-link"><span class="icon-map-marker icon-white"></span>@EPMS.WebModels.Resources.WebsiteClient.Home.Home.GoogleMapLocation</a></p>
                </div><!-- end contact-details -->
            </div>
        }
        else
        {
            <div class="span3 footerCont">
                <div class="contact-details">
                    <h3 class="m_title">@EPMS.WebModels.Resources.WebsiteClient.ContactUs.ContactUs.Title</h3>
                    <p>
                    </p>

                    <p>
                        <strong>@EPMS.WebModels.Resources.WebsiteClient.ContactUs.ContactUs.Telephone: </strong><br />
                        <strong>@EPMS.WebModels.Resources.WebsiteClient.ContactUs.ContactUs.Email: </strong> <a href="#"></a>
                    </p>

                    <p><a href="http://www.google.com/maps/place/" target="_blank" class="map-link"><span class="icon-map-marker icon-white"></span>@EPMS.WebModels.Resources.WebsiteClient.Home.Home.GoogleMapLocation</a></p>
                </div><!-- end contact-details -->
            </div>
        }
        </div><!-- end row -->



        <div class="row" style="margin-bottom:0px;">
            <div class="span12">
                <div class="bottom fixclear">

                    <div class="copyright">
                        <a href="~/Home/Index"><img src="~/images/logoDark.png" alt="" /></a>
                        <p>
                            &copy; 2015 <strong>@EPMS.WebModels.Resources.WebsiteClient.ShoppingCart.Cart.PageTitle</strong>. @EPMS.WebModels.Resources.WebsiteClient.Home.Home.AllRightsReserved -
                            @EPMS.WebModels.Resources.WebsiteClient.Home.Home.PoweredBy<a href="http://www.cr3ativ3mind.com/" target="_blank">CR3ATIV3MIND</a>
                        </p>
                    </div><!-- end copyright -->
                </div><!-- end bottom -->
            </div>
        </div><!-- end row -->

    </div>
</footer>

@model EPMS.Models.IdentityModels.ViewModels.RoleViewModel

@{
    ViewBag.Title = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navigation Bar -->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/RolesAdmin/Index">
                Roles
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">@ViewBag.Title</a>
        </li>
    </ul>
</div>
<!-- Page heading -->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")

@using (Html.BeginForm("Create", "RolesAdmin", FormMethod.Post, new { @class = "form-horizontal", @id = "AddRoleForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)

        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label cultureE" for="EmployeeNameE">Role Name</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id="roleName" })
                    <label id="roleValidation"></label>
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn" onclick="validateRole(event)">Create</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    function validateRole(event) {
        var roleName = $("#roleName").val().toLowerCase();
        if (roleName == "" || roleName == null) {
            $("#roleValidation").text("Please enter role name.");
            $("#roleValidation").addClass("required");
            event.preventDefault();
            return false;
        }
        if (roleName == "customer") {
            $("#roleValidation").text("Please enter role other than Customer.");
            $("#roleValidation").addClass("required");
            event.preventDefault();
            return false;
        } else {
            $("#roleValidation").text("");
            $("#roleValidation").removeClass("required");
            return true;
        }
    }
</script>
@model EPMS.WebModels.ViewModels.IRF.ItemReleaseCreateViewModel
@{
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}
<div id="warhouseSelector" class="modal hide fade treeSelector">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Warehouse</h3>
    </div>
    <div class="modal-body ">
        <form class="form-horizontal warhouseSelection">
            <input id='WarehouseModalIndex' type='hidden' />
            <input id='WarehouseCount' type='hidden' />
            <div id="Simple_Multiple_Select_Box" class="control-group row-fluid">
                <div class="span4">
                    <label class="control-label" for="MaritalStatus">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.SelectWarhouses</label>
                </div>
                <div class="span8">
                    <div class="controls">
                        <select multiple name="simpleMulti" id="MultiWarehouse"></select>
                    </div>
                </div>

            </div>
            <div class="control-group row-fluid">
                <div class="span12 span-inset">
                    <button type="button" class="btn addWar">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.AddWarhouse</button>
                </div>
            </div>
            <div class="control-group row-fluid">
                <label id="WarehouseQtyExceedError" class="required center"></label>
                <label id="WarehouseQtyNullError" class="required center"></label>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="javascript:;" class="btn btn-primary" id="AddWarehouse">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Add</a>
        <a href="javascript:;" class="btn" data-dismiss="modal">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Cancel</a>
    </div>
</div>
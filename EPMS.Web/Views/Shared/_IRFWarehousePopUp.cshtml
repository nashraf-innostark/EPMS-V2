@{
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
}
<div id="warhouseSelector" class="modal hide fade treeSelector">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Warhouse</h3>
    </div>
    <div class="modal-body ">
        <form class="form-horizontal warhouseSelection">


            <div id="Simple_Multiple_Select_Box" class="control-group row-fluid">
                <div class="span4">
                    <label class="control-label" for="MaritalStatus">Select one or more Warhouses </label>
                </div>
                <div class="span8">
                    <div class="controls">
                        <select multiple name="simpleMulti" id="simpleMulti">
                            <option value="War101">War101 - number of items available</option>

                            <option value="War102">War102 - number of items available</option>

                            <option value="War103">War103 - number of items available</option>

                        </select>
                    </div>
                </div>

            </div>
            <div class="control-group row-fluid">
                <div class="span12 span-inset">
                    <button type="button" class="btn addWar">Add Warhouse</button>
                </div>
            </div>
            <!--Input Field begin-->
            <!--Input Field end-->
            <!--Simple Multiple Select Box end-->
            <script>
                                $().ready(function(){
                                    $(".addWar").click(function(){
									dropAllWar();
										$("#simpleMulti option:selected").each(function(){
											var name = $(this).val();
										    var html ='<div class="control-group row-fluid warhouses"><div class="span3"><label class="control-label" for="createdBy">'+name+' </label></div><div class="span7"> <div class="controls"><input  type="text" for="numbers" value="0" ></div></div><div class="span1 span-inset"><button type="button" class="btn dropWar">-</button></div></div>'
											$('.warhouseSelection').append(html);
											dropWarhouse();

										});
									});
									function dropWarhouse(){
									$(".dropWar").click(function(){
									 $(this).parents().eq(1).remove();
									});
									}
									function dropAllWar(){
									$(".warhouses").remove();

									}


                                });

            </script>

        </form>
    </div>
    <div class="modal-footer">
        <a href="javascript:;" class="btn btn-primary">Add</a>
        <a href="javascript:;" class="btn" data-dismiss="modal">Cancel</a>
    </div>
</div>
@{
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}
<div id="itemSearcher" class="modal hide fade treeSelector">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.ItemSearch</h3>
    </div>
    <div class="modal-body ">
        <form class="form-horizontal">
            <div class="control-group row-fluid">
                <div class="span3"></div>
                <div class="span9">
                    <div class="controls">
                        <label>
                            <input id="dropdown" type="radio" name="ItemFrom" value="dropdown">
                            @EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Dropdown
                        </label>
                        <br />
                        <label>
                            <input id="tree" type="radio" name="ItemFrom" value="tree">
                            @EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Tree
                        </label>
                    </div>
                </div>
            </div>
            <input id='ItemModalIndex' type='hidden' />
            <div id="Simple_Select_Box_with_Filter_Search" class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="selectBoxFilter">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.SelectItem</label>
                </div>
                <div class="span7">
                    <div class="controls">
                        @if (direction == "ltr")
                        {
                            @Html.DropDownList("ItemVariationDropDownList", new SelectList(Model.ItemVariationDropDownList, "ItemVariationId", "ItemCodeSKUCodeDescriptoinEn"), "", new { @class = "select2me", @id = "RFIItemVariationDropDownList" })
                        }
                        else
                        {
                            @Html.DropDownList("ItemVariationDropDownList", new SelectList(Model.ItemVariationDropDownList, "ItemVariationId", "ItemCodeSKUCodeDescriptoinAr"), "", new { @class = "select2me", @id = "RFIItemVariationDropDownList" })
                        }
                    </div>
                    <label id="RFIItemVariationDropDownListValidation"></label>
                </div>
            </div>
            <div class="control-group row-fluid" id="treeControl">
                <div class="span4">
                    <label class="control-label" for="selectBoxFilter">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.ItemTreeSelector</label>
                </div>
                <div class="span8 span-inset">
                    <button id="treeSelector" type="button" class="btn itemAdder">+</button>
                    @*<label id="txtSelectedDepartmentName"></label>*@
                </div>
                <input type="hidden" id="RFIItemVariationTree" />
            </div>
            <div class="control-group row-fluid">
                <div class="span9 ">
                    <label class="control-label">
                        <input type="checkbox" class="uniformCheckbox" id="ItemDescriptionModalChk" style="margin: -1px 2px 0px 0px;">
                        @EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.AddItemDescription
                    </label>

                    <label class="control-label">
                        <input type="checkbox" class="uniformCheckbox" id="ItemSKUModalChk" style="margin: -1px 2px 0px 0px;">
                        @EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.AddItemSKU
                    </label>
                </div>
            </div>
            <!--Simple Multiple Select Box end-->
        </form>
    </div>
    <div class="modal-footer">
        <a href="javascript:;" class="btn btn-primary" id="Add">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Add</a>
        <a href="javascript:;" class="btn" data-dismiss="modal">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Cancel</a>
    </div>
</div>
<div id="itemTreeSelector" class="modal hide fade treeSelector">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.PlaceInDepartments</h3>
    </div>
    <div class="modal-body ">
        <form class="form-horizontal">
            <div class="sidebarMenuHolder">
                <div class="JStree">
                    <div class="Jstree_shadow_top"></div>
                    <div id="jstree"></div>
                    <div class="Jstree_shadow_bottom"></div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <label id="selectedItemTreeValidation" style="float: left; margin-top: 5px;"></label>
        <a href="javascript:;" class="btn btn-primary" id="selectDepartment">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Select</a>
        <a href="javascript:;" class="btn" data-dismiss="modal">@EPMS.WebModels.Resources.Inventory.IRF.AddEdit.IRFCreate.Cancel</a>
    </div>
</div>
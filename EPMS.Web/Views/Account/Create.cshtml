<!-- Page heading -->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
<!-- Page heading ends -->

<!-- Form starts.  -->
@using (Html.BeginForm("Create", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container-fluid">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(m => m.UserId)
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="UserName">Username</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new { @dir = "ltr", placeholder = "Enter Username", id = "UserName" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="useremail">Email</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Email, new { @dir = "ltr", id = " useremail ", placeholder = "Enter Email", @readonly = (@Model != null && !string.IsNullOrEmpty(@Model.UserId)) })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "required" })
                </div>
            </div>
        </div>
        @if (Model != null)
        {
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="roleId">Role</label>
            </div>
            <div class="span2">
                <div class="controls">
                    @Html.DropDownListFor(x => x.SelectedRole, new SelectList(Model.Roles, "Id", "Name"), "Select Role", new { id = "roleId" })
                    @Html.ValidationMessageFor(m => m.SelectedRole, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="employeeId">Employee</label>
            </div>
            <div class="span2">
                <div class="controls">
                    @Html.DropDownListFor(x => x.SelectedEmployee, new SelectList(Model.Employees, "EmployeeId", "EmployeeFullName"), "Select Employee", new { @class = "select2me", id = " employeeId " })
                    @Html.ValidationMessageFor(m => m.SelectedEmployee, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="password">Password</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control ltr", placeholder = "Password", id = "password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid" style="display: @(string.IsNullOrEmpty(@Model.UserId) ? "block" : "none")">
            <div class="span3">
                <label class="control-label" for="confirmPassword">Confirm Password</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control ltr", placeholder = "Confirm Password", id = "confirmPassword" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "required" })
                </div>
            </div>
        </div>
        }
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn">@btnText</button>
            </div>
        </div>
    </div>
}
<!-- Matter ends -->


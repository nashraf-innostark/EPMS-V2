@using System.Web.UI.WebControls
@using Microsoft.AspNet.Identity
@model  EPMS.Models.IdentityModels.ViewModels.ProfileViewModel
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


    <!-- Navigation Bar -->
    <div class="breadcrumb-container">
        <ul class="xbreadcrumbs">
            <li>
                <a href="dashboard-En.html">
                    <i class="icon-photon home"></i>
                </a>
            </li>
            <li>
                <a href="Employees(Admin)En.html">
                    User Management
                </a>
            </li>
            <li class="current">
                <a href="javascript:;">My Profile</a>


            </li>
        </ul>
    </div>
    <!-- Page heading -->
    <header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    </header>
    <!--Notifications begin-->
    @Html.Partial("_Alert")
    <!--Notifications end-->
    <!-- Page heading ends -->
    <!-- Matter -->
<!-- Form starts.  -->
@using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="col-lg-2 control-label textAlignLeft">User Name</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control mandatory ltr", @placeholder = "First Name" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            @*<div class="col-lg-5" style="position: absolute; left: 50%; ">
                    @Html.HiddenFor(model => model.ImageName)
                    <img class="DisplayImage" src="@Url.Content(Model.ImagePath)" alt="" />
                </div>*@
        </div>
        <div class="clearfix"></div>

        <div class="form-group">
            <label class="col-lg-2 control-label textAlignLeft">Email</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control mandatory ltr", @placeholder = "Email", @readonly = "readonly", @style = "border: none;" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>


        <div class="form-group">
            <label class="col-lg-2 control-label textAlignLeft">Date of Birth</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control mandatory cursorHand textAlignRight", @placeholder = "Date of Birth" })
                @Html.ValidationMessageFor(m => m.DateOfBirth)
                @*<input type="text" id="DateOfBirth" data-value="التاريخ" />*@
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label textAlignLeft">Photo</label>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.UploadImage, new { type = "file", accept = ".jpg,.jpeg,.png" })
                @Html.ValidationMessageFor(model => model.UploadImage, null, new { @class = "Error" })
            </div>
        </div>

        <hr />
        <div class="form-group">


            <div class="col-lg-6">
                <button type="submit" class="btn btn-circle blue">Update</button>

            </div>
        </div>
    </div>
}
        <div class="matter">
            <div class="container">
                <!-- Dashboard Graph starts -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left"> You're logged in as <strong>@User.Identity.GetUserName()</strong></div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>

                                    <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">


                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Matter ends -->



        <div class="scroll-top-wrapper ">
            <span class="scroll-top-inner">
                <i class="icon-photon arrow_up"></i>
            </span>
        </div>

        <link rel="stylesheet" href="~/Content/css/zebra.css" type="text/css" media="screen">
        <script type="text/javascript" src="~/Scripts/App/zebra_datepicker.js"></script>
        <script>
            $(document).ready(function () {
                $('#DateOfBirth').Zebra_DatePicker();
            });
        </script>

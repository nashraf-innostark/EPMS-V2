@using System.Web.Mvc.Html
@model EPMS.WebModels.ViewModels.NewsAndArticle.NewsAndArticleListViewModel

@{
    ViewBag.Title = EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.NewsTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
    var serial = 0;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.NewsTitle
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal" id="validation_form">
    <div class="container-fluid">
        <div class="alert alert-info alert-block">
            <i class="icon-alert icon-alert-info"></i>
            <strong>@ViewBag.Title</strong><a href="~/Website/NewsAndArticle/Create">@EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.AddNewNews</a>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <table id="NewsAndArticle" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>@EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.Serial</th>
                            <th>@EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.Image</th>
                            <th>@EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.Title</th>
                            <th>@EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.Author</th>
                            <th>@EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.Date</th>
                            <th>@EPMS.WebModels.Resources.Website.NewsAndArticles.NewsAndArticlesList.Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.NewsAndArticles.ToList())
                        {
                            serial = serial + 1;
                            <tr>
                                <td>@serial</td>
                                <td>
                                    @if (@item.ImagePath != null)
                                    {
                                        <img class="itemImg" src='/Images/NewsOrArticle/@Url.Content(@item.ImagePath)' />
                                    }
                                    else
                                    {
                                        <img class="itemImg" src='~/Images/NoImage.png' />
                                    }
                                </td>
                                <td>
                                    @if (direction == "ltr")
                                    {
                                        @Html.ActionLink(@item.TitleEn, "Create", new { id = item.NewsArticleId })
                                    }
                                    else
                                    {
                                        @Html.ActionLink(@item.TitleAr, "Create", new { id = item.NewsArticleId })
                                    }
                                </td>
                                <td>
                                    @if (direction == "ltr")
                                    {
                                        @item.AuthorNameEn
                                    }
                                    else
                                    {
                                        @item.AuthorNameAr
                                    }
                                </td>
                                <td>@item.DateTimeForIndex</td>
                                <td class="delete"><a href="#" id="delete" @*onclick="window.location.href = '/Website/NewsAndArticle/Delete?id=' + @item.NewsArticleId"*@ onclick="deleteRow(@item.NewsArticleId)">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</form>

<script>
    var siteUrl = $('#siteURL').val();
    $(document).ready(function() {
        $('#NewsAndArticle').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                null,
                { "bSortable": false },
                null,
                null,
                null,
                { "bSortable": false }
            ],
            "fnInitComplete": function() {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            },
        });
        $("#simpleSelectBox").select2({
            dropdownCssClass: 'noSearch'
        });
    });

    function deleteRow(abcd) {
        debugger;
        if (confirm('@EPMS.WebModels.Resources.Website.Common.Common.DeleteConfirmation') == false) {
            return;
        }

        var serviceUrl = '/Website/NewsAndArticle/DeleteIt';
        $.ajax({
            url: serviceUrl,
            type: "POST",
            dataType: "json",
            data: {
                abcd: abcd
            },
            success: function () {
                $.pnotify({
                    title: 'Success',
                    type: 'info',
                    text: '@EPMS.WebModels.Resources.Website.Common.Common.DeleteSuccessMsg'
                });
            },
            error: function () {
                $.pnotify({
                    title: 'Failure',
                    type: 'error',
                    text: '@EPMS.WebModels.Resources.Website.Common.Common.DeleteErrorMsg'
                });
            }
        });
    }

</script>

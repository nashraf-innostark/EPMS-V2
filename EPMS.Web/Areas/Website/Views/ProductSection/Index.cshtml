@model EPMS.WebModels.ViewModels.ProductSection.ProductSectionListViewModel

@{
    ViewBag.Title = EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
    var serial = 0;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal" id="validation_form">
    <div class="container-fluid">
        <div class="alert alert-info alert-block">
            <i class="icon-alert icon-alert-info"></i>
            <strong>@ViewBag.Title</strong><a href="~/Website/ProductSection/Create">@EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.AddNew</a>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <table id="ProductSection" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>@EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.Serial</th>
                            <th>@EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.SectionName</th>
                            <th>@EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.InventoryDepartment</th>
                            <th>@EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.ManuallyCreated</th>
                            <th>@EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.ShowToPublic</th>
                            <th>@EPMS.WebModels.Resources.Website.ProductSection.ProductSectionIndex.Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductSections.ToList())
                        {
                            serial = serial + 1;
                            <tr>
                                <td>@serial</td>
                                <td>
                                    @(direction == "ltr" ? item.SectionNameEn : item.SectionNameAr)
                                </td>
                                <td>
                                    @(direction == "ltr" ? item.InventoryDepartmentNameEn : item.InventoryDepartmentNameAr)
                                </td>
                                <td>@item.IsManuallyCreated</td>
                                <td>@item.ShowToPublicForIndex</td>
                                <td class="delete"><a href="#" id="delete" onclick="deleteRow(@item.SectionId, this)">@EPMS.WebModels.Resources.Website.Common.Common.Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</form>

<script>
    var siteUrl = $('#siteURL').val();
    $(document).ready(function () {
        $('#ProductSection').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                null,
                null,
                null,
                null,
                null,
                null
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            },
        });
        $("#simpleSelectBox").select2({
            dropdownCssClass: 'noSearch'
        });
    });

    function deleteRow(sectionId, elem) {
        if (confirm('@EPMS.WebModels.Resources.Website.Common.Common.DeleteConfirmation') == false) {
            return;
        }

        var serviceUrl = '/Website/ProductSection/DeleteIt';
        $.ajax({
            url: serviceUrl,
            type: "POST",
            dataType: "json",
            data: {
                sectionId: sectionId
            },
            success: function(data) {
                if (data.response == "OK") {
                    var row = $(elem).parent().parent().get(0);
                    var atable = $('#ProductSection').dataTable();
                    var pos = atable.fnGetPosition(row);
                    atable.fnDeleteRow(pos);
                    $.pnotify({
                        title: 'Success',
                        type: 'info',
                        text: '@EPMS.WebModels.Resources.Website.Common.Common.DeleteSuccessMsg'
                    });
                }
                if (data.response == "ASSOCIATED") {
                    $.pnotify({
                        title: 'Failure',
                        type: 'error',
                        text: 'Error deleting record because it is associated'
                    });
                }
                if (data.response == "ERROR") {
                    $.pnotify({
                        title: 'Failure',
                        type: 'error',
                        text: '@EPMS.WebModels.Resources.Website.Common.Common.DeleteErrorMsg'
                    });
                }
            },
            error: function () {
                $.pnotify({
                    title: 'Failure',
                    type: 'error',
                    text: '@EPMS.WebModels.Resources.Website.Common.Common.DeleteErrorMsg'
                });
            }
        });
    }
</script>

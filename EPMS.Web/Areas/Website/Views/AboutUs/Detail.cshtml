@using System.Configuration
@model EPMS.WebModels.ViewModels.AboutUs.AboutUsViewModel

@{
    ViewBag.Title = Model.AboutUs.AboutUsId > 0 ? EPMS.WebModels.Resources.Website.AboutUs.AboutUs.UpdatePageTitle : EPMS.WebModels.Resources.Website.AboutUs.AboutUs.AddPageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Website/Home/Index">
                @EPMS.WebModels.Resources.Website.AboutUs.AboutUs.MainPage
            </a>
        </li>
        <li class="current">
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

@using (Html.BeginForm("Detail", "AboutUs", FormMethod.Post, new {@id = "AboutUsForm", @class = "form-horizontal", role = "form"}))
{
    <div class="container-fluid">

        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.AboutUs.AboutUsId)
        @Html.HiddenFor(m => m.AboutUs.RecCreatedBy)
        @Html.HiddenFor(m => m.AboutUs.RecCreatedDt)
        @Html.ValidationSummary(true, "", new {@class = "alert alert-danger"})
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.Title</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.AboutUs.Title, new { @dir = "ltr", id = "Title", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.AboutUs.Title, "", new { @class = "required" })
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.TitleAr</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.AboutUs.TitleAr, new { @dir = "ltr", id = "TitleAr", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.AboutUs.TitleAr, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.MetaKeywords</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.AboutUs.MetaKeywords, new { @dir = "ltr", id = "MetaKeywords", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.AboutUs.MetaKeywords, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.MetaKeywordsAr</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.AboutUs.MetaKeywordsAr, new { @dir = "ltr", id = "MetaKeywordsAr", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.AboutUs.MetaKeywordsAr, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.MetaDesc</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.AboutUs.MetaDesc, new { @dir = "ltr", id = "MetaDesc", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.AboutUs.MetaDesc, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.MetaDescAr</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.AboutUs.MetaDescAr, new { @dir = "ltr", id = "MetaDescAr", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.AboutUs.MetaDescAr, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <div class="span3 span-inset">
                    <button id="savebtn" class="btn">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.Save</button>
                    <button id="edit" class="btn">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.Edit</button>
                </div>
                <div class="span3 span-inset">
                    <button id="cancel" class="btn" onclick="window.location.href = '@(ConfigurationManager.AppSettings["SiteURL"])/Website/Home/Index'" type="reset">@EPMS.WebModels.Resources.Website.AboutUs.AboutUs.Cancel</button>
                </div>
            </div>
        </div>

    </div>
    
}

<script>

    $(document).ready(function () {

        var aboutUsId = $('#AboutUs_AboutUsId').val();

        var siteUrl = $("#siteURL").val();
        $("#JobTitleForm").validate({
            errorElement: "span",
            errorClass: "error",
            onclick: true,
            rules: {
                "req": {
                    required: true
                },
                "numbers": {
                    required: false,
                    digits: true
                },
                "email": {
                    email: true
                },
                "url": {
                    url: true
                },
                "date": {
                    date: true
                }
            }
        });

        if (aboutUsId == null || aboutUsId == "" || aboutUsId == 0) {
            $('.' + 'tbdisable' + ':input').attr('disabled', false);
            $("#savebtn").show();
            $("#cancel").show();
            $("#edit").hide();
        } else {
            $('.' + 'tbdisable' + ':input').attr('disabled', true);
            $("#savebtn").hide();
            $("#cancel").show();
            $("#edit").show();
        }

        $("#edit").click(function (event) {
            $('.' + 'tbdisable' + ':input').attr('disabled', false);
            $("#savebtn").show();
            $("#cancel").show();
            $("#edit").hide();
            event.preventDefault();
        });

    });

</script>

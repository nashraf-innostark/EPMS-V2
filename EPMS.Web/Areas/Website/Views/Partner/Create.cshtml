                        <input type="text" id="descp" readonly="readonly" />
                    </div>
                </div>
            </div>
        </div>
        <div id="CKEditorDescp">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="Description">Description</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextAreaFor(model => model.Partner.Description, new { @id = "Description", @class = "" })
                    </div>
                </div>
            </div>
        </div>*@
        <div id="Edit" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3 span-inset">
                    <button type="button" class="btn" id="edit">Edit</button>
                </div>
            </div>
        </div>
        <div id="Create" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3 span-inset">
                    <button type="submit" class="btn">Create</button>
                </div>
            </div>
        </div>
        <div id="Update" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3 span-inset">
                    <button type="submit" class="btn" name="Update">Update</button>
                </div>
            </div>
        </div>
        @if (Model.Partner.PartnerId > 0 && userPermissionsSet.Contains("DeletePartner"))
        {
            <div id="Delete" style="display: none">
                <div class="control-group row-fluid">
                    <div class="span3 span-inset">
                        <button type="submit" class="btn" name="Delete">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
}


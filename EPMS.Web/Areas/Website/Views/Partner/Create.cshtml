@model EPMS.Web.ViewModels.Partner.PartnerViewModel

@{
    ViewBag.Title = Model.Partner.PartnerId > 0 ? "Website Partners Updation" : "Website Partners Additoin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] userPermissionsSet = (string[])HttpContext.Current.Session["UserPermissionSet"];
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Website/Home/Index">
                Website Main Page
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    @if (Model.Partner.PartnerId > 0)
    {
        <h2><small>Website Partners Edit</small></h2>
    }
    else
    {
        <h2><small>Website Partners Add</small></h2>
    }
</header>

@using (Html.BeginForm("Create", "Partner", FormMethod.Post, new { @class = "form-horizontal", @id = "AddEditSliderForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(model => model.Partner.PartnerId)
        @Html.HiddenFor(model => model.Partner.RecCreatedBy)
        @Html.HiddenFor(model => model.Partner.RecCreatedDate)
        @Html.HiddenFor(model => model.Partner.ImageName, new { @id = "ImageName" })
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="Order">Order  </label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Partner.ImageOrder, new { @id = "Order", @class = "toBeDisable" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="NameEn">Partner Name</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Partner.NameEn, new { @id = "NameEn", @class = "toBeDisable" })
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="NameAr">Partner Name Arabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Partner.NameAr, new { @id = "NameAr", @class = "toBeDisable" })
                </div>
            </div>
        </div>
        <div id="Drag_And_Drop_Upload" class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="inputField">
                    Image<a href="javascript:;" class="bootstrap-tooltip" data-placement="top" data-original-title="file size shouldn't exceed 1MB"><i class="icon-photon info-circle"></i></a>
                </label>
            </div>
            <div class="span9 row-fluid" id="image">

@using System.Configuration
@model EPMS.WebModels.ViewModels.ContactUs.ContactUsViewModel
@{
    ViewBag.Title = Model.ContactUs.ContactUsId > 0 ? EPMS.WebModels.Resources.Website.ContactUs.ContatUs.UpdatePageTitle : EPMS.WebModels.Resources.Website.ContactUs.ContatUs.AddPageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Website/Home/Index">
                @EPMS.WebModels.Resources.Website.ContactUs.ContatUs.MainPage
            </a>
        </li>
        <li class="current">
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

@using (Html.BeginForm("Detail", "ContactUs", FormMethod.Post, new { @id = "ContactUsForm", @class = "form-horizontal", role = "form" }))
{
    <div class="container-fluid">
        
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ContactUs.ContactUsId)
        @Html.HiddenFor(m => m.ContactUs.RecCreatedBy)
        @Html.HiddenFor(m => m.ContactUs.RecCreatedDt)
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.Title</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.ContactUs.Title, new { @dir = "ltr", id = "Title", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.ContactUs.Title, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.TitleAr</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.ContactUs.TitleAr, new { @dir = "ltr", id = "TitleAr", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.ContactUs.TitleAr, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.Addres</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.ContactUs.Address, new { @dir = "ltr", id = "Address", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.ContactUs.Address, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.AddressAr</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.ContactUs.AddressAr, new { @dir = "ltr", id = "AddressAr", @class = "tbdisable toBeRequired" })
                    @Html.ValidationMessageFor(m => m.ContactUs.AddressAr, "", new { @class = "required" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.Mobile</label>

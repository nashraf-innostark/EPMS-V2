            <div class="span3">
                <label class="control-label">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.ShowToPublic</label>
            </div>
            <div class="span9 span-inset">
                <div data-on-label="YES" data-off-label="NO" class="switch switch-small" data-on="success" data-off="danger">
                    @Html.CheckBoxFor(model => model.ContactUs.ShowToPublic, new { @id = "ShowToPublic", @class = "tbdisable toBeRequired" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <div class="span3 span-inset">
                    <button id="savebtn" class="btn">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.CreateButton</button>
                    <button id="edit" class="btn">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.EditButton</button>
                </div>
                <div class="span3 span-inset">
                    <button id="cancel" class="btn" onclick="window.location.href = '@(ConfigurationManager.AppSettings["SiteURL"])/Website/Main/Index'" type="reset">@EPMS.WebModels.Resources.Website.ContactUs.ContatUs.CancelButton</button>
                </div>
            </div>
        </div>

    </div>
}

<script>

    $(document).ready(function () {

        var contactUsId = $('#ContactUs_ContactUsId').val();

        var siteUrl = $("#siteURL").val();
        $("#JobTitleForm").validate({
            errorElement: "span",
            errorClass: "error",
            onclick: true,
            rules: {
                "req": {
                    required: true
                },
                "numbers": {
                    required: false,
                    digits: true
                },
                "email": {
                    email: true
                },
                "url": {
                    url: true
                },
                "date": {
                    date: true
                }
            }
        });

        if (contactUsId == null || contactUsId == "" || contactUsId == 0) {
            $('.' + 'tbdisable' + ':input').attr('disabled', false);
            $("#savebtn").show();
            $("#cancel").show();
            $("#edit").hide();
        } else {
            $('.' + 'tbdisable' + ':input').attr('disabled', true);
            $("#savebtn").hide();
            $("#cancel").show();
            $("#edit").show();
        }

        $("#edit").click(function (event) {
            $('.' + 'tbdisable' + ':input').attr('disabled', false);
            $("#savebtn").show();
            $("#cancel").show();
            $("#edit").hide();
            event.preventDefault();
        });

    });

</script>
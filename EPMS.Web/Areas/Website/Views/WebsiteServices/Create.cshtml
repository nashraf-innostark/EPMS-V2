    <header>
        <i class="icon-big-notepad"></i>
        <h2><small>@EPMS.WebModels.Resources.Website.WebsiteService.Service.WebsiteServices</small></h2>
    </header>
    <!--Notifications begin-->
    @Html.Partial("_Alert")
    <!--Notifications end-->

@using iTextSharp.text.pdf
@model EPMS.Web.ViewModels.Department.DepartmentListViewModel

@{
    ViewBag.Title = "Department Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="dashboard-En.html">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/HR/Department/">
                Department
            </a>
        </li>
        <li class="current">
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

<div class="form-horizontal">
    <div class="container-fluid">
        @Html.HiddenFor(m => m.Department.DepartmentId)
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DepartmentName">Department Name</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Department.DepartmentName, new { @ViewBag.Disabled })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DepartmentDesc">Department Description</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Department.DepartmentDesc, new { @ViewBag.Disabled })
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <table class="table table-striped table-responsive" id="tableSortableResMed">
                    <thead class="cf sorthead">
                        <tr>
                            <th>Employee</th>

                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <form class="form-horizontal">
            <div class="row-fluid">
                <div class="span12">
                    <table id="DepartmentList" class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.EmployeeList.ToList())
                            {
                                <tr>
                                    <td>@item.EmployeeFirstName @item.EmployeeMiddleName @item.EmployeeLastName</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>

        

        <div class="control-group row-fluid">
            <div class="span3">
                <div class="span3 span-inset">
                    <button id="edit" class="btn" onclick="window.location.href='/HR/Department/Create/@Model.Department.DepartmentId'">Edit</button>
                </div>
            </div>
        </div>

    </div>
</div>
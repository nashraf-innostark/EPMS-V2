@using iTextSharp.text.pdf
@model EPMS.Web.ViewModels.Department.DepartmentListViewModel

@{
    ViewBag.Title = "Department Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="dashboard-En.html">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/HR/Department/">
                Department
            </a>
        </li>
        <li class="current">
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

@using (Html.BeginForm("Create", "Department", FormMethod.Post, new { @id = "departmentForm", @class = "form-horizontal", role = "form" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(m => m.Department.DepartmentId)
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DepartmentName">Department Name English</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Department.DepartmentNameE, new { @dir = "ltr", id = "DeptName", @class ="tbdisable", @ViewBag.Disabled })
                    @Html.ValidationMessageFor(m => m.Department.DepartmentNameE, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DepartmentName">Department Name Arabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Department.DepartmentNameA, new { @dir = "ltr", id = "DeptName", @class = "tbdisable", @ViewBag.Disabled })
                    @Html.ValidationMessageFor(m => m.Department.DepartmentNameA, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DepartmentDesc">Department Description</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Department.DepartmentDesc, new { @dir = "ltr", @class ="tbdisable", id = "DeptDesc", @ViewBag.Disabled })
                    @Html.ValidationMessageFor(m => m.Department.DepartmentDesc, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div id="EmpLabel">
            <div class="row-fluid">
                <div class="span12">
                    <table class="table table-striped table-responsive" id="tableSortableResMed">
                        <thead class="cf sorthead">
                            <tr>
                                <th>Employee</th>

                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="row-fluid">
                    <div class="span12">
                        <table id="EmpList" class="table table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (@Model.Department != null)
                            {
                                foreach (var item in Model.EmployeeList.ToList())
                                {
                                <tr>
                                    <td>@item.EmployeeFirstName @item.EmployeeMiddleName @item.EmployeeLastName</td>

                                </tr>
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <div class="span3 span-inset">
                    <button id="edit" class="btn">Edit</button>
                    <button id="savebtn" class="btn" type="submit">Save</button>
                </div>
                <div class="span3 span-inset">
                    <button id="cancel" class="btn" onclick="window.location.href='/HR/Department/Index'" type="reset">Cancel</button>
                </div>
            </div>
        </div>

    </div>
}

<script>
    $(document).ready(function () {
        var id = $('#Department_DepartmentId').val();
        if (id == "") {
            $('.' + 'tbdisable' + ':input').attr('disabled', false);
            $("#EmpLabel").hide();
            $("#savebtn").show();
            $("#cancel").show();
            $("#edit").hide();
            event.preventDefault();
        } else {
            $('.' + 'tbdisable' + ':input').attr('disabled', true);
            $("#EmpLabel").show();
            $("#savebtn").hide();
            $("#cancel").hide();
            $("#edit").show();
            event.preventDefault();
        }
    });
    $("#edit").click(function () {
        $('.' + 'tbdisable' + ':input').attr('disabled', false);
        $("#EmpLabel").hide();
        $("#savebtn").show();
        $("#cancel").show();
        $("#edit").hide();
        event.preventDefault();
    });


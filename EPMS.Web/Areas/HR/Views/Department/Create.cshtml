@model EPMS.Web.ViewModels.Department.DepartmentListViewModel

@{
    ViewBag.Title = "Create Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="dashboard-En.html">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/HR/Department/">
                Department
            </a>
        </li>
        <li class="current">
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

@using (Html.BeginForm("Create", "Department", FormMethod.Post, new { @id = "departmentForm", @class = "form-horizontal", role = "form"  }))
{
    <div class="container-fluid">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(m => m.Department.DepartmentId)
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DepartmentName">Department Name</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Department.DepartmentName, new { @dir = "ltr", placeholder = "Enter Department Name", id = "DeptName" })
                    @Html.ValidationMessageFor(m => m.Department.DepartmentName, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DepartmentDesc">Department Description</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.Department.DepartmentDesc, new { @dir = "ltr", placeholder = "Enter Department Description", id = "DeptDesc" })
                    @Html.ValidationMessageFor(m => m.Department.DepartmentDesc, "")
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <div class="span3 span-inset">
                    <button type="submit" class="btn">Save</button>
                </div>
            </div>
        </div>

    </div>
}

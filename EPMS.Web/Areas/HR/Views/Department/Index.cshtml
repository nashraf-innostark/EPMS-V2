@model EPMS.WebModels.ViewModels.Department.DepartmentListViewModel

@{
    ViewBag.Title = EPMS.WebModels.Resources.HR.Department.IndexLabel;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
    int i = 0;
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @EPMS.WebModels.Resources.HR.Department.Label
            </a>
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/HR/Department/Create">@EPMS.WebModels.Resources.HR.Department.AddDepartment</a></small></h3>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <table id="DepartmentList" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>@EPMS.WebModels.Resources.Shared.Common.Serial</th>
                            <th>@EPMS.WebModels.Resources.HR.Department.Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DepartmentList.ToList())
                        {
                            <tr>
                                <td>@(i += 1)</td>
                                <td>
                                    @if (direction == "ltr")
                                    {
                                        @Html.ActionLink(@item.DepartmentNameE, "Create", new {id = item.DepartmentId})
                                    }
                                    else
                                    {
                                        @Html.ActionLink(@item.DepartmentNameA, "Create", new {id = item.DepartmentId})
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>

    <script>
        $(document).ready(function () {
            $('#DepartmentList').dataTable({
                "sPaginationType": "bootstrap",
                "aoColumns": [
                    { "bVisible": true, "bSortable": false },
                      null
                ],
                "fnInitComplete": function () {
                    $(".dataTables_wrapper select").select2({
                        dropdownCssClass: 'noSearch'
                    });
                },
            });
        });
    </script>

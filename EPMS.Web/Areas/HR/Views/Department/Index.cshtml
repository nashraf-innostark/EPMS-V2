@model EPMS.Web.ViewModels.Department.DepartmentViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                Departments' List
            </a>
        </li>
    </ul>
</div>
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/HR/Department/AddEdit">Add New Department</a></small></h3>
</header>

<div class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                    <table id="DepartmentList" class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Case Status Name</th>
                                <th>Case Status Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DepartmentList.ToList())
                                {
                                    <tr>
                                        <td>@item.DepartmentId</td>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.DepartmentDesc</td>

                                    </tr>
                                }
                        </tbody>
                    </table>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {

@model EPMS.Web.ViewModels.Recruitment.RecruitmentViewModel

@{
    ViewBag.Title = "All Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                Vacancies List
            </a>
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/HR/Recruitment/Create">Add New Job</a></small></h3>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<div class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <table id="JobsList" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Department</th>
                            <th>Number Of Open Vacancies</th>
                            <th>Basic Salary</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.JobsOffered.ToList())
                        {
                            <tr>
                                <td>@item.JobOfferedId</td>
                                <td>@Html.ActionLink(@item.TitleE, "Create", new { id = item.JobOfferedId }) </td>
                                <td>@Html.ActionLink(@item.Department.DepartmentNameE, "Create", new { id = item.Department.DepartmentId }) </td>
                                <td>@item.NoOfPosts</td>
                                <td>@item.BasicSalary</td>
                                <td>@item.IsOpen?"Yes":"No"</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#JobsList').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                { "bVisible": false }, // cloumn to hide
                  null, // not hide
                  null // not hide
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });

    });
</script>
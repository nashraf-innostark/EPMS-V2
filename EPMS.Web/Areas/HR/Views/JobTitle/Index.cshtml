@model EPMS.Web.ViewModels.JobTitle.JobTitleViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                Job Titles' List
            </a>
        </li>
    </ul>
</div>
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/HR/JobTitle/Create">Add New Job Title</a></small></h3>
</header>

<div id="English" class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <table id="JobTitle" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@EPMS.Web.Resources.Resource1.Name</th>
                            <th>Job Title Description</th>
                            <th>Basic Salary</th>
                            <th>Department</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.JobTitleList.ToList())
                        {
                            <tr>
                                <td>@item.JobTitleId</td>
                                <td>@Html.ActionLink(@item.JobTitleName, "Create", new { id = item.JobTitleId }) </td>
                                <td>@item.JobTitleDesc</td>
                                <td>@item.BasicSalary</td>
                                <td>@item.Department.DepartmentName</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>


@model EPMS.Web.ViewModels.JobTitle.JobTitleViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                Job Titles' List
            </a>
        </li>
    </ul>
</div>
<header>
    <i class="icon-big-notepad" ></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/HR/JobTitle/Create">@EPMS.Web.Resources.HR.JobTitle.AddNew</a></small></h3>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<div id="English" class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <table id="JobTitle" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@EPMS.Web.Resources.HR.JobTitle.Name</th>
                            @*<th>Job Title Name Eng</th>*@
                            @*<th>Job Title Name Ar</th>*@
                            <th>@EPMS.Web.Resources.HR.JobTitle.Description</th>
                            @*<th>Job Title Description Ar</th>*@
                            <th>@EPMS.Web.Resources.HR.JobTitle.BasicSalary</th>
                            <th>@EPMS.Web.Resources.HR.JobTitle.Department</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.JobTitleList.ToList())
                        {
                            <tr>
                                <td>@item.JobTitleId</td>
                                <td>@Html.ActionLink(@item.JobTitleNameE, "Create", new { id = item.JobTitleId }) </td>
                                @*<td>@Html.ActionLink(@item.JobTitleNameA, "Create", new { id = item.JobTitleId }) </td>*@
                                <td>@item.JobTitleDescE</td>
                                @*<td>@item.JobTitleDescA</td>*@
                                <td>@item.BasicSalary</td>
                                <td>@item.Department.DepartmentNameE</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#JobTitle').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                { "bVisible": false }, // cloumn to be hide
                  null, // not hide
                  null,
                  null,
                  null
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });
        $("#simpleSelectBox").select2({
            dropdownCssClass: 'noSearch'
        });
    });
</script>
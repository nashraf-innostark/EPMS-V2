@model EPMS.Web.ViewModels.JobTitle.JobTitleViewModel

@{
    ViewBag.Title = "Create Job Title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="dashboard-En.html">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/HR/Jobtitle/">
                Job Title
            </a>
        </li>
        <li class="current">
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

@using (Html.BeginForm("Create", "JobTitle", FormMethod.Post, new { @id = "JobTitleForm", @class = "form-horizontal", role = "form" }))
{
    <div class="container-fluid">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.JobTitle.JobTitleId)
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="JobTitleName">Job Title Name Englis</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.JobTitle.JobTitleNameE, new { @dir = "ltr", placeholder = "Enter Job Title Name", id = "JobTitleName" })
                    @Html.ValidationMessageFor(m => m.JobTitle.JobTitleNameE, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="JobTitleName">Job Title Name Arabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.JobTitle.JobTitleNameA, new { @dir = "ltr", placeholder = "Enter Job Title Name", id = "JobTitleName" })
                    @Html.ValidationMessageFor(m => m.JobTitle.JobTitleNameA, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="departmentId">Department</label>
            </div>
            <div class="span2">
                <div class="controls">
                    @Html.DropDownListFor(x => x.JobTitle.DepartmentId, new SelectList(Model.DepartmentList, "DepartmentId", "DepartmentNameE"), "Select Department", new { @class = "select2me", id = " departmentId " })
                    @Html.ValidationMessageFor(m => m.JobTitle.DepartmentId, "", new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="JobTitleDesc">Job Title Description English</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.JobTitle.JobTitleDescE, new { @dir = "ltr", placeholder = "Enter Job Title Description", id = "JobTitleDesc" })
                    @Html.ValidationMessageFor(m => m.JobTitle.JobTitleDescE, "")
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="JobTitleDesc">Job Title Description Arabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.JobTitle.JobTitleDescA, new { @dir = "ltr", placeholder = "Enter Job Title Description", id = "JobTitleDesc" })
                    @Html.ValidationMessageFor(m => m.JobTitle.JobTitleDescA, "")
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="BasicSalary">Basic Salary</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(m => m.JobTitle.BasicSalary, new { @dir = "ltr", placeholder = "Enter Basic Salary", id = "BasicSalary" })
                    @Html.ValidationMessageFor(m => m.JobTitle.BasicSalary, "")
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <div class="span3 span-inset">
                    <button type="submit" class="btn">Save</button>
                </div>
            </div>
        </div>

    </div>
}


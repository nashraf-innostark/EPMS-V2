@model EPMS.Web.ViewModels.JobOffered.JobOfferedViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.HR.JobOffered.IndexLabel;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @EPMS.Web.Resources.HR.JobOffered.Label
            </a>
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<div class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <table id="JobsOfferedList" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@EPMS.Web.Resources.HR.JobOffered.JobTitle</th>
                            <th>@EPMS.Web.Resources.HR.JobOffered.JobDescription</th>
                            <th>@EPMS.Web.Resources.HR.JobOffered.BasicSalaray</th>
                            <th>@EPMS.Web.Resources.HR.JobOffered.NoOfPosts</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.JobOfferedList.ToList())
                        {
                            if (item.IsOpen)
                            {
                                <tr>
                                    <td>@item.JobOfferedId</td>
                                    @if (EPMS.Web.Helper.CultureHelper.IsRighToLeft())
                                    {
                                        <td>@Html.ActionLink(@item.JobTitle.JobTitleNameA, "Apply", new {id = item.JobOfferedId}) </td>
                                        <td>@item.JobTitle.JobTitleDescA</td>
                                    }
                                    else
                                    {
                                        <td>@Html.ActionLink(@item.JobTitle.JobTitleNameE, "Apply", new { id = item.JobOfferedId }) </td>
                                        <td>@item.JobTitle.JobTitleDescE</td>
                                    }
                                    <td>@if (item.ShowBasicSalary) { @item.JobTitle.BasicSalary }</td>
                                    <td>@item.NoOfPosts</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </form>
</div>

<script>

    $(document).ready(function () {
        $('#JobsOfferedList').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                { "bVisible": false }, // cloumn to hide
                null, // not hide
                null,
                null,
                null
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });

    });
</script>



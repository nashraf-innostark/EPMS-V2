@model EPMS.WebModels.ViewModels.JobOffered.JobOfferedViewModel

@{
    ViewBag.Title = EPMS.WebModels.Resources.HR.JobOffered.IndexLabel;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
    int i = 0;
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @EPMS.WebModels.Resources.HR.JobOffered.Label
            </a>
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->

<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/HR/JobOffered/Create">@EPMS.WebModels.Resources.HR.JobOffered.AddNew</a></small></h3>
</header>
<!-- Page Heading End-->

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <table id="JobsOfferedList" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>@EPMS.WebModels.Resources.Shared.Common.Serial</th>
                            <th>@EPMS.WebModels.Resources.HR.JobOffered.JobTitle</th>
                            <th>@EPMS.WebModels.Resources.HR.JobOffered.JobDescription</th>
                            <th>@EPMS.WebModels.Resources.HR.JobOffered.BasicSalaray</th>
                            <th>@EPMS.WebModels.Resources.HR.JobOffered.NoOfPosts</th>
                            <th>@EPMS.WebModels.Resources.HR.JobOffered.IsOpen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.JobOfferedList.ToList())
                        {
                            <tr>
                                <td>@(i += 1)</td>
                                @if (EPMS.Web.Helper.CultureHelper.IsRighToLeft())
                                {
                                    <td>@Html.ActionLink(@item.JobTitleNameA, "Create", new { id = item.JobOfferedId }) </td>
                                    <td>@Html.Raw(item.JobTitleDescA)</td>
                                }
                                else
                                {
                                    <td>@Html.ActionLink(@item.JobTitleNameE, "Create", new { id = item.JobOfferedId }) </td>
                                    <td>@Html.Raw(item.JobTitleDescE)</td>
                                }
                                <td>@if (item.ShowBasicSalary) { @item.BasicSalary }</td>
                                <td>@item.NoOfPosts</td>
                                <td>@item.IsOpenStatus</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</form>
<script>

    $(document).ready(function () {
        $('#JobsOfferedList').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                { "bVisible": true, "bSortable": false }, // cloumn to hide
                null, // not hide
                null,
                null,
                null,
                null
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            },
        });

    });
</script>



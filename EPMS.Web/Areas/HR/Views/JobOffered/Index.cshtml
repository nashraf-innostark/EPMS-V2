@model EPMS.Web.ViewModels.JobOffered.JobOfferedViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.HR.JobOffered.IndexLabel;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Home/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @EPMS.Web.Resources.HR.JobOffered.Label
            </a>
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/HR/Department/Create">@EPMS.Web.Resources.HR.JobOffered.AddNew</a></small></h3>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<div class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <table id="DepartmentList" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@EPMS.Web.Resources.HR.JobOffered.JobTitle</th>
                            <th>@EPMS.Web.Resources.HR.JobOffered.JobDescription</th>
                            <th>@EPMS.Web.Resources.HR.JobOffered.BasicSalaray</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.JobOfferedList.ToList())
                        {
                            <tr>
                                <td>@item.JobOfferedId</td>
                                <td>@Html.ActionLink(@item.JobTitle.JobTitleNameE, "Create", new { id = item.JobOff }) </td>
                                <td>@item.JobDescription</td>
                                @*<td>@item.JobTitle.JobTitleNameE</td>*@

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#DepartmentList').dataTable({
            "sPaginationType": "bootstrap",
            //"aoColumns": [
            //    { "bVisible": false }, // cloumn to hide
            //      null, // not hide
            //      null, // not hide
            //      null // not hide
            //],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });

    });
</script>
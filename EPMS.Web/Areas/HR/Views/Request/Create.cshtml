@model  EPMS.Web.ViewModels.Request.EmployeeRequestViewModel
@{
    ViewBag.Title = Model.EmployeeRequest.RequestId > 0 ? "Update Request" : "Create Request";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Navigation Bar -->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Request/Index">
                Requests List
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">@ViewBag.Title</a>
        </li>
    </ul>
</div>
<!-- Page heading -->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title </small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")

<!-- Form starts.  -->
@using (Html.BeginForm("Create", "Request", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.EmployeeRequest.RequestId)

    <div class="container-fluid">

        <div class="form-legend" id="Input_Field">Input Fields</div>

        <!--Input Field of Request begin-->
        <div class="control-group row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.EmployeeRequest.Employee.EmployeeFullName, new { @class = "control-label" })
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.EmployeeRequest.Employee.EmployeeFullName, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.EmployeeRequest.Employee.EmployeeFullName)
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.EmployeeRequest.Employee.EmployeeId, new { @class = "control-label" })
            </div>
            <div class="span2">
                <div class="controls">
                    @Html.TextBoxFor(model => model.EmployeeRequest.Employee.EmployeeId, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.EmployeeRequest.Employee.EmployeeId)
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.EmployeeRequest.Employee.DepartmentName, new { @class = "control-label" })
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.EmployeeRequest.Employee.DepartmentName, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.EmployeeRequest.Employee.DepartmentName)
                </div>
            </div>

        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.EmployeeRequest.RequestTopic, new { @class = "control-label" })
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.EmployeeRequest.RequestTopic)
                    @Html.ValidationMessageFor(model => model.EmployeeRequest.RequestTopic)
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.EmployeeRequestDetail.RequestDesc, new { @class = "control-label" })
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.EmployeeRequestDetail.RequestDesc)
                    @Html.ValidationMessageFor(model => model.EmployeeRequestDetail.RequestDesc)
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.EmployeeRequest.IsMonetary, new { @class = "control-label" })
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.CheckBoxFor(model => model.EmployeeRequest.IsMonetary)
                    @Html.ValidationMessageFor(model => model.EmployeeRequest.IsMonetary)
                </div>
            </div>
        </div>
        <!--End    --    Input Field of Request-->
        <!--Input Field of RequestDetail begin-->
        <div id="monetaryRequestControls" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3">
                    @Html.LabelFor(model => model.EmployeeRequestDetail.LoanAmount, new { @class = "control-label" })
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.EmployeeRequestDetail.LoanAmount)
                        @Html.ValidationMessageFor(model => model.EmployeeRequestDetail.LoanAmount)
                    </div>
                </div>
            </div>

            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label">Loan Date (Hijri)</label>
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.TextBox("Loan Date", null, new { @class = "datepickerArabic cursorHand", @id = "LoanDateAr", onchange = "HijriToGregorian(this,'#LoanDateEn')", @readonly = true })
                    </div>
                </div>
            </div>
            <div class="control-group row-fluid">
                <div class="span3">
                    @Html.LabelFor(model => model.EmployeeRequestDetail.LoanDate, new { @class = "control-label" })
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.EmployeeRequestDetail.LoanDate, new { @class = "datepickerGregorian cursorHand", @id = "LoanDateEn", onchange = "GregorianToHijri(this,'#LoanDateAr')", @readonly = true })
                        @Html.ValidationMessageFor(model => model.EmployeeRequestDetail.LoanDate)
                    </div>
                </div>
            </div>

            <div class="control-group row-fluid">
                <div class="span3">
                    @Html.LabelFor(model => model.EmployeeRequestDetail.InstallmentAmount, new { @class = "control-label" })
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.EmployeeRequestDetail.InstallmentAmount)
                        @Html.ValidationMessageFor(model => model.EmployeeRequestDetail.InstallmentAmount)
                    </div>
                </div>
            </div>

            <div class="control-group row-fluid">
                <div class="span3">
                    @Html.LabelFor(model => model.EmployeeRequestDetail.NumberOfMonths, new { @class = "control-label" })
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.EmployeeRequestDetail.NumberOfMonths)
                        @Html.ValidationMessageFor(model => model.EmployeeRequestDetail.NumberOfMonths)
                    </div>
                </div>
            </div>

            <div class="control-group row-fluid">
                <div class="span3">
                    @Html.LabelFor(model => model.EmployeeRequestDetail.FirstInstallmentDate, new { @class = "control-label" })
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.EmployeeRequestDetail.FirstInstallmentDate, new { @class = "datepickerGregorian cursorHand", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.EmployeeRequestDetail.FirstInstallmentDate)
                    </div>
                </div>
            </div>

            <div class="control-group row-fluid">
                <div class="span3">
                    @Html.LabelFor(model => model.EmployeeRequestDetail.LastInstallmentDate, new { @class = "control-label" })
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.EmployeeRequestDetail.LastInstallmentDate, new { @class = "cursorHand", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.EmployeeRequestDetail.LastInstallmentDate)
                    </div>
                </div>
            </div>
        </div>
        <!--End    --    Input Field of RequestDetail-->
        @if(!@Model.EmployeeRequestDetail.IsApproved){
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn">Submit</button>
            </div>
        </div>
        }
    </div>
}
<script>
    $(document).ready(function () {
        MonetaryHideShow();
        $('#EmployeeRequestDetail_LastInstallmentDate').mask('99/99/9999');
        $("#LoanDateAr").val(ConvertDates($("#LoanDateEn").val(), "gregorian", "islamic"));
    });
    $('#EmployeeRequest_IsMonetary').change(function () {
        MonetaryHideShow();
    });
    function MonetaryHideShow() {
        var divToBeAffected = '#monetaryRequestControls';
        if ($('#EmployeeRequest_IsMonetary').is(":checked")) {
            $(divToBeAffected).show();
        } else {
            $(divToBeAffected).hide();
        }
    }
    $('#EmployeeRequestDetail_FirstInstallmentDate').change(function () {
        $('#EmployeeRequestDetail_LastInstallmentDate').val(moment($('#EmployeeRequestDetail_FirstInstallmentDate').val()).add($('#EmployeeRequestDetail_NumberOfMonths').val(), 'months').format('MM/DD/YYYY'));
    });
    $('#EmployeeRequestDetail_NumberOfMonths').change(function () {
        $('#EmployeeRequestDetail_LastInstallmentDate').val(moment($('#EmployeeRequestDetail_FirstInstallmentDate').val()).add($('#EmployeeRequestDetail_NumberOfMonths').val(), 'months').format('MM/DD/YYYY'));
    });
</script>

@model List<EPMS.Web.Models.ContactList>

@{
    ViewBag.Title = @EPMS.Web.Resources.HR.ContactsList.ContactList;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li class="current">
            <a href="">
                @ViewBag.Title
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
</header>

<div class="form-horizontal">
    <div id="English" class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <table id="ContactList" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>@EPMS.Web.Resources.HR.ContactsList.Serial</th>
                            <th>@EPMS.Web.Resources.HR.ContactsList.Name</th>
                            <th>@EPMS.Web.Resources.HR.ContactsList.Type</th>
                            <th>@EPMS.Web.Resources.HR.ContactsList.Number</th>
                            <th>@EPMS.Web.Resources.HR.ContactsList.Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>
                                    @if (direction == "ltr")
                                    {
                                        <a href="@item.Link">@item.NameE</a>
                                    }
                                    else
                                    {
                                        <a href="@item.Link">@item.NameA</a>
                                    }
                            </td>
                            <td class="gradeX">@item.Type</td>
                            <td class="gradeX">@item.MobileNumber</td>
                            <td class="gradeX"><a href="mailto:@item.Email">@item.Email</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#ContactList').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                null, // cloumn to be hide
                null, // not hide
                null,
                null,
                null
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });
        $("#simpleSelectBox").select2({
            dropdownCssClass: 'noSearch'
        });
    });
</script>
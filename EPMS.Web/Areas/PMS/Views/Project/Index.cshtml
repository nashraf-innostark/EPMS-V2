@model EPMS.Web.ViewModels.Project.ProjectListViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.PMS.Project.ListPageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li class ="current">
            @EPMS.Web.Resources.PMS.Project.ProjectsList
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.Web.Resources.PMS.Project.ListPageHeading</small></h2>
    <h3> <small><a href="~/PMS/Project/Create">@EPMS.Web.Resources.PMS.Project.AddNew</a></small></h3>
    <h3> <small><a href="~/PMS/Project/Finished">@EPMS.Web.Resources.PMS.Project.FinishedProjects</a></small></h3>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<div class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <table id="ProjectsTable" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@EPMS.Web.Resources.PMS.Project.ProjectName</th>
                            <th>@EPMS.Web.Resources.PMS.Project.ClientName</th>
                            <th>@EPMS.Web.Resources.PMS.Project.StartDate</th>
                            <th>@EPMS.Web.Resources.PMS.Project.DeliveryDate</th>
                            <th>@EPMS.Web.Resources.PMS.Project.Price</th>
                            <th>@EPMS.Web.Resources.PMS.Project.Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Projects.ToList())
                        {
                            <tr>
                                <td>@item.ProjectId</td>
                                <td class="center"><a href="/PMS/Project/Create/@item.ProjectId">@item.NameE</a></td>
                                <td class="center"><a href="/CMS/Customer/Details/@item.CustomerId">@item.CustomerNameE</a></td>
                                <th>@(Convert.ToDateTime(item.StartDate).ToShortDateString())</th>
                                <th>@(Convert.ToDateTime(item.EndDate).ToShortDateString())</th>
                                <th>@item.Price</th>
                                <th>
                                    <div class="progress progress-info">
                                        <div class="bar" style="width: @item.ProgressTotal%">@item.ProgressTotal%</div>
                                    </div>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#ProjectsTable').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                { "bVisible": false },
                  null,
                  null,
                  null,
                  null,
                  null,
                  null,
            ],
            "aaSorting": [[1,'asc']],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });
    });
</script>
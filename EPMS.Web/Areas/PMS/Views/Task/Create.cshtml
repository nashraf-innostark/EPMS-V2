@model EPMS.Web.ViewModels.Tasks.TaskCreateViewModel

@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
}

<!-- Navigation Bar -->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/PMS/Task/Index">

            </a>
        </li>
        <li>
            @ViewBag.Title
        </li>
    </ul>
</div>
<!-- Page heading -->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@Model.Header</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
<!-- Page heading ends -->
@using (Html.BeginForm("Create", "Task", FormMethod.Post, new { @class = "form-horizontal", @id = "AddEditTaskForm", role = "form", enctype = "multipart/form-data" }))
{
    @*@Html.HiddenFor(model => model.Orders.OrderId)*@
    <div class="container-fluid">
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="Client">Client Name</label>
            </div>
            <div class="span2">
                <div class="controls">
                    @if (direction == "ltr")
                    {
                        @Html.DropDownListFor(model => model.ProjectTask.CustomerId, new SelectList(ViewBag.Customers, "CustomerId", "CustomerNameE"), "--Select--", new { @class = "", @id = "Client" })
                    }
                    @if (direction == "rtl")
                    {
                        @Html.DropDownListFor(model => model.ProjectTask.CustomerId, new SelectList(ViewBag.Customers, "CustomerId", "CustomerNameA"), "--Select--", new { @class = "", @id = "Client" })
                    }
                    @Html.ValidationMessageFor(m => m.ProjectTask.CustomerId, String.Empty, new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="">Project Name </label>
            </div>
            <div class="span2">
                <div class="controls">
                    @if (Model.ProjectTask.CustomerId == 0)
                    {
                        @Html.DropDownListFor(m => m.ProjectTask.ProjectId, Enumerable.Empty<SelectListItem>(), "", new { @id = "ProjectId" })
                    }
                    else
                    {
                        @Html.DropDownListFor(m => m.ProjectTask.ProjectId, new SelectList(ViewBag.Orders, "ProjectId", "ProjectId"), "", new { @id = "ProjectId" })
                    }
                    @Html.ValidationMessageFor(m => m.ProjectTask.ProjectId, String.Empty, new { @class = "required" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="TaskNameE">Task Name</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.ProjectTask.TaskNameE, new { @id = "TaskNameE", @class = "" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="TaskNameA">Task Name arabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.ProjectTask.TaskNameA, new { @id = "TaskNameA", @class = "" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DescriptionE">Description</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.ProjectTask.DescriptionE, new { @id = "DescriptionE", @class = "" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DescriptionA">Description arabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.ProjectTask.DescriptionA, new { @id = "DescriptionA", @class = "" })
                </div>
            </div>
        </div>
        <div id="Dual_Multi_Select_with_Filter_Search" class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="dualMulti">Pre-Requisit Tasks</label>
            </div>
            <div class="span9">
                <div class="controls">
                    <select multiple name="dualMulti" id="dualMulti">
                        <option selected="" value="Task1">Task1</option>
                        <option value="Task1">Task2</option>
                        <option value="Task1">Task3</option>
                        <option value="Task1">Task4</option>
                        <option value="Task1">Task5 </option>
                    </select>
                </div>
            </div>
        </div>
        <div id="Date_Picker" class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="datepicker">
                    Start Date<a href="javascript:;" class="bootstrap-tooltip" data-placement="top" data-original-title="(dd/mm/yyyy)"><i class="icon-photon info-circle"></i></a>
                </label>
            </div>
            <div class="span9">
                <div class="controls">
                    <input type="text" id="datepicker" class="span3 datepicker" />
                </div>
            </div>
        </div>
        <div id="Date_Picker2" class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="datepicker2">
                    End Date<a href="javascript:;" class="bootstrap-tooltip" data-placement="top" data-original-title="(dd/mm/yyyy)"><i class="icon-photon info-circle"></i></a>
                </label>
            </div>
            <div class="span9">
                <div class="controls">
                    <input type="text" id="datepicker2" class="span3 datepicker" />
                </div>
            </div>
        </div>
        <div id="Dual_Multi_Select_with_Filter_Search" class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="dualMulti2">Assign Employees</label>
            </div>
            <div class="span9">
                <div class="controls">
                    <select multiple name="dualMulti" id="dualMulti2">
                        <option selected="" value="0">Ali - 1</option>
                        <option value="1">Saud - 1</option>
                        <option value="2">Hussain - 1</option>
                        <option value="3">Noor - 1</option>
                        <option value="4">Said - 5</option>
                        <option value="5">Omar - 1</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="MobileNumber">Task Cost</label>
            </div>
            <div class="span9">
                <div class="controls">
                    <input id="MobileNumber" type="text" name="inputField" class="required number">
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="TaskWeight">Task Weight</label>
            </div>
            <div class="span9">
                <div class="controls">
                    <input id="TaskWeight" type="text" name="inputField" class="required">
                    <script>
                        $(document).ready(function () {
                            $('#TaskWeight').mask("99%");
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="Notes">Notes</label>
            </div>
            <div class="span9">
                <div class="controls">
                    <input id="Notes" type="text" name="inputField" value="CLK Editor">
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="Notesa">Notes arabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    <input id="Notesa" type="text" name="inputField" value="CLK Editor">
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn">Save Changes</button>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="button" class="btn">Delete Task</button>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/plugins/jquery.blockUI.js"></script>
<script src="~/RichTextEditor/ckeditor.js"></script>
<script>
    $().ready(function () {
        $("#dualMulti").pickList({
            sourceListLabel: "Tasks",
            targetListLabel: "Prerquisit Tasks",
        });
        $("#dualMulti2").pickList({
            sourceListLabel: "Employees - Number Of Tasks They Are Working On",
            targetListLabel: "Added",
        });
        $('.datepicker').mask('99/99/9999');
        $(".datepicker").datepicker();
        var siteUrl = $('#siteURL').val();
        var url = siteUrl + "/PMS/Task/GetCustomerProjects";
        $("#Client").on("change", function () {
            var customerId = parseInt($(this).val());
            if (customerId > 0) {
                $.blockUI({
                    message: '<img src="/Images/Gallery/ajax_loader.gif" style="width:75px; height:75"/>',
                    css: { backgroundColor: '#FFFAFA', left: "47%", width: "6%" }
                });
                $.ajax({
                    url: url,
                    type: 'GET',
                    dataType: "json",
                    data: {
                        customerId: customerId
                    },
                    success: function (data) {
                        populateDDL(data);
                    },
                    error: function (e) {
                        $.unblockUI();
                        alert('Error=' + e.toString());
                    }
                });
            } else {

            }

        });
    });
    function populateDDL(data) {
        $("#ProjectId").empty();
        if (data.length > 0) {
            for (var i = 0; i < data.length; i++) {
                $("#ProjectId").append(
                    $('<option></option>').val(data[i].ProjectId).html(data[i].NameE)
                );
            }
        } else {
            $("#ProjectId").append(
                    $('<option></option>').val("").html("none")
                );
        }
        $.unblockUI();
    }
</script>
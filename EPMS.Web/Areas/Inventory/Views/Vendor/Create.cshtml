                </div>
                <div class="control-group row-fluid">
                    <div class="span3 span-inset">
                        <button type="button" class="btn trAdder">Add</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                <div class="span3 span-inset">
                    <button id="edit" class="btn">@EPMS.Web.Resources.Inventory.Vendor.EditButton</button>
                    <button id="savebtn" class="btn" type="submit">@EPMS.Web.Resources.Inventory.Vendor.SaveButton</button>
                </div>
                <div class="span3 span-inset">
                    <button id="cancel" class="btn" onclick="window.location.href = '@(ConfigurationManager.AppSettings["SiteURL"])/Inventory/Vendor/Index'" type="reset">@EPMS.Web.Resources.HR.JobTitle.CancelButton</button>
                </div>
            </div>
        </div>

    </div>
}


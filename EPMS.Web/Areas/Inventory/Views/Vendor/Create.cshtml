                <div class="controls">
                    @Html.TextBoxFor(m => m.Vendor.VendorEmail, new { id = "Email", @class = "tbdisable toBeRequired", @ViewBag.Disabled })
                    @Html.ValidationMessageFor(m => m.Vendor.VendorEmail, "", new { @class = "required" })
                </div>
            </div>

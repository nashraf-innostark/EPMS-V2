@model EPMS.WebModels.ViewModels.Vendor.VendorViewModel

@{
    ViewBag.Title = EPMS.WebModels.Resources.Inventory.Vendor.Label;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MessageVM = TempData["message"];
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @EPMS.WebModels.Resources.Inventory.Vendor.Label
            </a>
        </li>
    </ul>
</div>
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/Inventory/Vendor/Create">@EPMS.WebModels.Resources.Inventory.Vendor.AddNew</a></small></h3>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal">
    <div id="English" class="container-fluid">
        
        <div class="row-fluid">
            <div class="span12">
                <table id="Vendors" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>@EPMS.WebModels.Resources.Inventory.Vendor.Serial</th>
                            <th>@EPMS.WebModels.Resources.Inventory.Vendor.Name</th>
                            <th>@EPMS.WebModels.Resources.Inventory.Vendor.Field</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.VendorList.ToList())
                        {
                            <tr>
                                <td>@item.VendorId</td>
                                @if (direction == "ltr")
                                {
                                    <td>@Html.ActionLink(@item.VendorNameEn, "Create", new { id = item.VendorId })</td>
                                }
                                else
                                {
                                    <td>@Html.ActionLink(@item.VendorNameAr, "Create", new { id = item.VendorId })</td>
                                }
                                <td>@item.VendorField</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</form>

<script>
    $(document).ready(function () {
        $('#Vendors').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                null,
                null,
                null
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });
        $("#simpleSelectBox").select2({
            dropdownCssClass: 'noSearch'
        });
    });
</script>

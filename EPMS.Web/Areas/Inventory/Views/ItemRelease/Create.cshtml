                customerId = 0;
            }
            if (customerId == 0) {
                $("#RfiId").empty();
                $("#RfiId").append(
                        $('<option></option>').val(0).html("none")
                    );
                $(".select2me").select2("destroy");
                $('.select2me').select2({
                    //placeholder: "Select",
                });
                return true;

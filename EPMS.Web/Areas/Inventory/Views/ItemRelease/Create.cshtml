            ajaxLoader();
            $.ajax({
                url: url,
                type: 'GET',
                dataType: "json",
                data: {
                    customerId: customerId
                },
                success: function (data) {
                    populateRFIDDL(data);
                },
                error: function (e) {
                    $.unblockUI();
                    alert('Error=' + e.toString());
                }
            });

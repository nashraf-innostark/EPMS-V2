@using System.Configuration
@model EPMS.Web.ViewModels.IRF.IrfHistoryViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.Inventory.IRF.View.IRFView.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
    string[] userPermissionsSet = (string[])HttpContext.Current.Session["UserPermissionSet"];
    var header = EPMS.Web.Resources.Inventory.IRF.View.IRFView.Header;
    var counter1 = 1;
    var counter2 = 1;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Inventory/ItemRelease/Index">
                @EPMS.Web.Resources.Inventory.IRF.View.IRFView.BCTitle
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">
                @header
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.HistoryHeader</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
@using (Html.BeginForm("History", "ItemRelease", FormMethod.Post, new { @class = "form-horizontal", @id = "AddEditItemReleaseForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(model => model.RecentIrf.ItemReleaseId)
        <div class="control-group row-fluid">
            <div class="form-legend centTitle">
                @EPMS.Web.Resources.Inventory.IRF.View.IRFView.ContainerTitle
            </div>
            <div class="invoice-info">
                <div class="controls">
                    <a href="javascript:print()" rel="tooltip" title="" data-original-title="Print statistics" class="print"><i class="icon-print"></i>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Print</a>
                </div>
                <div class="control-group row-fluid">
                    <div class="span6">
                        <div class="invoice-from">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.InventoryManagerName</th>
                                        <td>@(direction == "ltr" ? Model.RecentIrf.ManagerName : Model.RecentIrf.ManagerNameAr)</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.EmployeeId</th>
                                        <td>@(Session["EmployeeID"] == null ? "" : Session["EmployeeID"].ToString())</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRFNo</th>
                                        <td>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRF @Model.RecentIrf.RFIId</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Usage</th>
                                        <td>customer related</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="span6">
                        <div class="invoice-infos">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Date</th>
                                        <td>@Model.RecentIrf.RecCreatedDate.ToShortDateString()</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.RequesterName</th>
                                        <td>@(direction == "ltr" ? Model.RecentIrf.RequesterName : Model.RecentIrf.RequesterNameAr)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" id="ress">
            <div class="span12">
                <table class="table table-striped table-responsive ">
                    <thead class="">
                        <tr>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Serial</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ItemName</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ItemCode</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.SKUCode</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.QuantityRelease</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ShipmentDetails</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Warhouse</th>
                        </tr>
                    </thead>
                    <tbody class="qouteAdd">
                        @if (Model.IrfItems.Any())
                        {
                            foreach (var irf in Model.IrfItems)
                            {
                                <tr>
                                    <td>@counter1</td>
                                    <td>@irf.ItemName</td>
                                    <td>@irf.ItemCode</td>
                                    <td>@irf.ItemSKUCode</td>
                                    <td>@irf.ItemQty</td>
                                    <td class="@irf.IRFDetailId"></td>
                                    <script>
                                        if ('@direction' == "ltr") {
                                            var info = '@Html.Raw(Model.RecentIrf.DeliveryInfo)';
                                            var regex = /(<([^>]+)>)/ig;
                                            var result = info.replace(regex, "");
                                            $("." + '@irf.IRFDetailId').text(result);
                                        } else {
                                            var info = '@Html.Raw(Model.RecentIrf.DeliveryInfoArabic)';
                                            var regex = /(<([^>]+)>)/ig;
                                            var result = info.replace(regex, "");
                                            $("." + '@irf.IRFDetailId').text(result);
                                        }
                                    </script>
                                    <td>@irf.PlaceInWarehouse</td>
                                </tr>
                                counter1 = counter1 + 1;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="alert alert-info alert-block">
            <i class="icon-alert icon-alert-info"></i>
            <strong>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.HistoryTableHeader</strong>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <table class="table table-striped table-responsive" id="tableSortableResMed">
                    <thead class="cf sorthead">
                        <tr>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Serial</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRFFormNo</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Requester</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.TableHeaderDate</th>
                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Irfs.Any())
                        {
                            foreach (var itemRelease in Model.Irfs)
                            {
                                <tr class="gradeX">
                                    <td>
                                        @counter2
                                    </td>
                                    <td>
                                        <a href="~/Inventory/ItemRelease/Detail/@itemRelease.ItemReleaseId?from=History">@itemRelease.ItemReleaseId</a>
                                    </td>
                                    <td>
                                        @itemRelease.CreatedBy
                                    </td>
                                    <td>
                                        @itemRelease.RecCreatedDate.ToShortDateString()
                                    </td>
                                    <td>
                                        @if (itemRelease.Status == 3)
                                        {
                                            @EPMS.Web.Resources.Inventory.IRF.View.IRFView.StatusPending
                                        }
                                        else if (itemRelease.Status == 1)
                                        {
                                            @EPMS.Web.Resources.Inventory.IRF.View.IRFView.StatusAccepted
                                        }
                                        else if (itemRelease.Status == 2)
                                        {
                                            @EPMS.Web.Resources.Inventory.IRF.View.IRFView.StatusRejected
                                        }
                                    </td>
                                </tr>
                                        counter2 = counter2 + 1;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div id="CKNotes" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextAreaFor(model => model.RecentIrf.Notes, new { @id = "NotesEn", @class = "" })
                    </div>
                </div>
            </div>
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextAreaFor(model => model.RecentIrf.NotesAr, new { @id = "NotesAr", @class = "" })
                    </div>
                </div>
            </div>
        </div>
        <div id="Notes" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        <input type="text" id="notesE" class="toBeDisable" />
                    </div>
                </div>
            </div>
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        <input type="text" id="notesA" class="toBeDisable" />
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="jobTitle">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.RequestStatus</label>
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.DropDownListFor(model => model.RecentIrf.Status, new[] {
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Pending, Value = "3" },
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Accepted, Value = "1" },
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Rejected, Value = "2" } },
                           new { @id = "Status", @class = "select2me disableDdl" })
                    </div>
                </div>
            </div>
        </div>
        @if (Model.RecentIrf.Status != 1)
        {
            <div id="SubmitIrf" class="control-group row-fluid">
                <div class="span3 span-inset">
                    <button type="submit" class="btn">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Submit</button>
                </div>
            </div>
            if (userPermissionsSet.Contains("ItemReleaseCreate"))
            {
                <div id="EditIrf" class="control-group row-fluid">
                    <div class="span3 span-inset">
                        <a href="@(ConfigurationManager.AppSettings["SiteURL"])/Inventory/ItemRelease/Create/@Model.RecentIrf.ItemReleaseId" class="btn">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.EditIRF</a>
                    </div>
                </div>
            }
        }
    </div>
}
<script src="~/RichTextEditor/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        if ('@Model.RecentIrf.Status' == '1') {
            $('.' + 'toBeDisable' + ':input').attr('readonly', true);
            $('.disableDdl').select2('disable');
            var noteEn = '@Html.Raw(Model.RecentIrf.Notes)';
            var regex = /(<([^>]+)>)/ig;
            var result = noteEn.replace(regex, "");
            $("#notesE").val(result);
            var noteAr = '@Html.Raw(Model.RecentIrf.NotesAr)';
            regex = /(<([^>]+)>)/ig;
            result = noteAr.replace(regex, "");
            $("#notesA").val(result);
            $("#Notes").show();
            $("#EditIrf").hide();
            $("#SubmitIrf").hide();
        } else {
            CKEDITOR.replace('NotesEn', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            CKEDITOR.replace('NotesAr', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            $("#CKNotes").show();
        }
    });
</script>
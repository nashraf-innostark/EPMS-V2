@model EPMS.Web.ViewModels.IRF.ItemReleaseFormListViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.Inventory.IRFIndex.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">@EPMS.Web.Resources.Inventory.IRFIndex.Header</a>
        </li>
    </ul>
</div>
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.Web.Resources.Inventory.IRFIndex.Header</small></h2>
    <h3><small><a href="~/Inventory/ItemReleaseForm/Create">@EPMS.Web.Resources.Inventory.IRFIndex.CreateNew</a></small></h3>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal">
    <div class="container-fluid">
        <!--Sortable Responsive Media Table begin-->
        <div class="row-fluid">
            <div class="span12">
                <table class="table table-striped table-responsive" id="tableSortableResMed">
                    <thead class="cf sorthead">
                        <tr>
                            <th>Serial</th>
                            <th>Item Release Form(IRF) Number</th>
                            <th>Total Qantity Released</th>
                            <th>Employee Name</th>
                            <th>Shipment Details</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        $('#tableSortableResMed').dataTable({
            "sPaginationType": "bootstrap",
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });
    });
</script>

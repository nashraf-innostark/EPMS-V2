@using System.Configuration
@model EPMS.Web.ViewModels.IRF.ItemReleaseDetailViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.Inventory.IRF.View.IRFView.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
    var header = EPMS.Web.Resources.Inventory.IRF.View.IRFView.Header;
    int i = 0;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Inventory/ItemRelease/Index">
                @EPMS.Web.Resources.Inventory.IRF.View.IRFView.BCTitle
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">
                @header
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@header</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
@using (Html.BeginForm("Detail", "ItemRelease", FormMethod.Post, new { @class = "form-horizontal", @id = "AddEditItemReleaseForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(model => model.ItemRelease.ItemReleaseId)
        <div class="control-group row-fluid">
            <div class="form-legend centTitle">
                @EPMS.Web.Resources.Inventory.IRF.View.IRFView.ContainerTitle
            </div>
            <div class="invoice-info">
                <div class="controls">
                    <a href="javascript:print()" rel="tooltip" title="" data-original-title="Print statistics" class="print"><i class="icon-print"></i>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Print</a>
                </div>
                <div class="control-group row-fluid">
                    <div class="span6">
                        <div class="invoice-from">
                            <table>
                                <tbody>
                                    @if (ViewBag.IsAllowedCompleteView)
                                    {
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.InventoryManagerName</th>
                                            <td>@(direction == "ltr" ? Session["UserFullName"].ToString() : Session["UserFullNameA"].ToString())</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.EmployeeId</th>
                                            <td>@(Session["EmployeeID"] == null ? "" : Session["EmployeeID"].ToString())</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRFNo</th>
                                            <td>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRF @Model.ItemRelease.RFIId</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.EmployeeName</th>
                                            <td>@(direction == "ltr" ? Session["UserFullName"].ToString() : Session["UserFullNameA"].ToString())</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.EmployeeId</th>
                                            <td>@(Session["EmployeeID"] == null ? "" : Session["EmployeeID"].ToString())</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRFNo</th>
                                            <td>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRF @Model.ItemRelease.RFIId</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Usage</th>
                                            <td>customer related</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="span6">
                        <div class="invoice-infos">
                            <table>
                                <tbody>
                                    @if (ViewBag.IsAllowedCompleteView)
                                    {
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Date</th>
                                            <td>@Model.ItemRelease.RecCreatedDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.RequesterName</th>
                                            <td>@(direction == "ltr" ? Model.ItemRelease.RequesterNameE : Model.ItemRelease.RequesterNameA)</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.OrderNo</th>
                                            <td>@Model.ItemRelease.OrderNo</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Date</th>
                                            <td>@Model.ItemRelease.RecCreatedDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ClientName</th>
                                            <td>@(direction == "ltr" ? Model.ItemRelease.RequesterNameE : Model.ItemRelease.RequesterNameA)</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.OrderNo</th>
                                            <td>@Model.ItemRelease.OrderNo</td>
                                        </tr>
                                        <tr>
                                            <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.InventoryManagerName</th>
                                            <td></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" id="ress">
            <div class="span12">
                <table class="table table-striped table-responsive ">
                    <thead class="">
                        @if (ViewBag.IsAllowedCompleteView)
                        {
                            <tr>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Serial</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ItemName</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ItemCode</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.SKUCode</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.QuantityRelease</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ShipmentDetails</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Warhouse</th>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Serial</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ItemName</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ItemCode</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.SKUCode</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.QuantityRelease</th>
                                <th>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.ShipmentDetails</th>
                            </tr>
                        }
                    </thead>
                    <tbody class="qouteAdd">
                        @if (ViewBag.IsAllowedCompleteView)
                        {
                            i = 0;
                            foreach (var itemReleaseDetail in Model.ItemReleaseDetails)
                            {
                                <tr>
                                    <td>@(i += 1)</td>
                                    <td>@itemReleaseDetail.ItemName</td>
                                    <td>@itemReleaseDetail.ItemCode</td>
                                    <td>@itemReleaseDetail.ItemSKUCode</td>
                                    <td>@itemReleaseDetail.ItemQty</td>
                                    <td class="@itemReleaseDetail.IRFDetailId"></td>
                                    <script>
                                        if ('@direction' == "ltr") {
                                            var info = '@Html.Raw(Model.ItemRelease.DeliveryInfo)';
                                            var regex = /(<([^>]+)>)/ig;
                                            var result = info.replace(regex, "");
                                            $("."+'@itemReleaseDetail.IRFDetailId').text(result);
                                        } else {
                                            var info = '@Html.Raw(Model.ItemRelease.DeliveryInfoArabic)';
                                            var regex = /(<([^>]+)>)/ig;
                                            var result = info.replace(regex, "");
                                            $("." + '@itemReleaseDetail.IRFDetailId').text(result);
                                        }
                                    </script>
                                    <td>@itemReleaseDetail.PlaceInWarehouse</td>
                                </tr>
                            }
                        }
                        else
                        {
                            i = 0;
                            foreach (var itemReleaseDetail in Model.ItemReleaseDetails)
                            {
                                <tr>
                                    <td>@(i += 1)</td>
                                    <td>@itemReleaseDetail.ItemName</td>
                                    <td>@itemReleaseDetail.ItemCode</td>
                                    <td>@itemReleaseDetail.ItemSKUCode</td>
                                    <td>@itemReleaseDetail.ItemQty</td>
                                    <td class="@itemReleaseDetail.IRFDetailId"></td>
                                    <script>
                                        if ('@direction' == "ltr") {
                                            var info = '@Html.Raw(Model.ItemRelease.DeliveryInfo)';
                                            var regex = /(<([^>]+)>)/ig;
                                            var result = info.replace(regex, "");
                                            $("." + '@itemReleaseDetail.IRFDetailId').text(result);
                                        } else {
                                            var info = '@Html.Raw(Model.ItemRelease.DeliveryInfoArabic)';
                                            var regex = /(<([^>]+)>)/ig;
                                            var result = info.replace(regex, "");
                                            $("." + '@itemReleaseDetail.IRFDetailId').text(result);
                                        }
                                    </script>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div id="CKNotes" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextAreaFor(model => model.ItemRelease.Notes, new { @id = "NotesEn", @class = "" })
                    </div>
                </div>
            </div>
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextAreaFor(model => model.ItemRelease.NotesAr, new { @id = "NotesAr", @class = "" })
                    </div>
                </div>
            </div>
        </div>
        <div id="Notes" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        <input type="text" id="notesE" class="toBeDisable" />
                    </div>
                </div>
            </div>
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        <input type="text" id="notesA" class="toBeDisable" />
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="jobTitle">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.RequestStatus</label>
                </div>
                <div class="span2">
                    @if (direction == "ltr")
                    {
                        <div class="controls">
                            @Html.DropDownListFor(model => model.ItemRelease.Status, new[] { new SelectListItem { Text = "Pending", Value = "3" }, new SelectListItem { Text = "Accept", Value = "1" }, new SelectListItem { Text = "Reject", Value = "2" } }, new { @id = "Status", @class = "select2me disableDdl" })
                        </div>
                    }
                    else
                    {
                        <div class="controls">
                            @Html.DropDownListFor(model => model.ItemRelease.Status, new[] { new SelectListItem { Text = "ريثما", Value = "3" }, new SelectListItem { Text = "استعرض", Value = "1" }, new SelectListItem { Text = "رفض", Value = "2" } }, new { @id = "Status", @class = "select2me disableDdl" })
                        </div>
                    }
                </div>
            </div>
        </div>
        <div id="SubmitIrf" class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Submit</button>
            </div>
        </div>
        <div id="EditIrf" class="control-group row-fluid">
            <div class="span3 span-inset">
                <a href="@(ConfigurationManager.AppSettings["SiteURL"])/Inventory/ItemRelease/Create/@Model.ItemRelease.ItemReleaseId" class="btn">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.EditIRF</a>
            </div>
        </div>
    </div>
}

<script src="~/RichTextEditor/ckeditor.js"></script>
<script>
    $(document).ready(function() {
        if ('@ViewBag.IsAllowedCompleteView' != "True") {
            $('.' + 'toBeDisable' + ':input').attr('readonly', true);
            $('.disableDdl').select2('disable');
            var noteEn = '@Html.Raw(Model.ItemRelease.Notes)';
            var regex = /(<([^>]+)>)/ig;
            var result = noteEn.replace(regex, "");
            $("#notesE").val(result);
            var noteAr = '@Html.Raw(Model.ItemRelease.NotesAr)';
            regex = /(<([^>]+)>)/ig;
            result = noteAr.replace(regex, "");
            $("#notesA").val(result);
            $("#Notes").show();
            $("#EditIrf").hide();
            $("#SubmitIrf").hide();
        } else {
            CKEDITOR.replace('NotesEn', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            CKEDITOR.replace('NotesAr', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            $("#CKNotes").show();
        }
    });
</script>
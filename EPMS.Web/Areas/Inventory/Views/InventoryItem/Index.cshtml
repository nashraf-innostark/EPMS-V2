@model EPMS.Web.ViewModels.InventoryItem.InventoryItemViewModel

@{
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
    ViewBag.Title = EPMS.Web.Resources.Inventory.InventoryItem.Label;
    ViewBag.MessageVM = TempData["message"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="">
                @EPMS.Web.Resources.Inventory.InventoryItem.Label
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    <h3> <small><a href="~/Inventory/InventoryItem/Create">@EPMS.Web.Resources.Inventory.InventoryItem.CreateNew</a></small></h3>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal">
    <div id="English" class="container-fluid">

        <div class="row-fluid">
            <div class="span12">
                <table id="InventoryItems" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.Serial</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.ItemCode</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.ItemName</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.DescriptionEn</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.DeptInfo</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.SkuDesc</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.QOnHand</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.QSold</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.AveragePrice</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.AverageCost</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.ReorderPoint</th>
                            <th>@EPMS.Web.Resources.Inventory.InventoryItem.Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InventoryItems.ToList())
                        {
                            <tr>
                                <td>@item.ItemId</td>
                                <td>@item.ItemCode</td>
                                @if (direction == "ltr")
                                {
                                    <td>@Html.ActionLink(@item.ItemNameEn, "Create", new { id = item.ItemId })</td>
                                }
                                else
                                {
                                    <td>@Html.ActionLink(@item.ItemNameAr, "Create", new { id = item.ItemId })</td>
                                }
                                @if (direction == "ltr")
                                {
                                    <td>@Html.Raw(item.ItemDescriptionEn)</td>
                                }
                                else
                                {
                                    <td>@Html.Raw(item.ItemDescriptionAr)</td>
                                }
                                <td>@item.DepartmentPath</td>
                                <td></td>
                                <td>@item.QuantityInHand</td>
                                <td>@item.QuantitySold</td>
                                <td>@item.AveragePrice</td>
                                <td>@item.AverageCost</td>
                                <td>@item.ReorderLevel</td>
                                <td class="@item.ItemId"><a href="#" id="delete" onclick="deleteRow(@item.ItemId)">@EPMS.Web.Resources.Inventory.InventoryItem.Delete</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</form>

<script>
    $(document).ready(function () {
        $('#InventoryItems').dataTable({
            "sPaginationType": "bootstrap",
            "aoColumns": [
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null
            ],
            "fnInitComplete": function () {
                $(".dataTables_wrapper select").select2({
                    dropdownCssClass: 'noSearch'
                });
            }
        });
        $("#simpleSelectBox").select2({
            dropdownCssClass: 'noSearch'
        });
    });

    function deleteRow(inventoryItemId) {
        if (confirm("Are you sure you want to delete this row ?") == false) {
            return;
        }

        var serviceUrl = '/Inventory/InventoryItem/Delete';
        $.ajax({
            url: serviceUrl,
            type: "POST",
            dataType: "json",
            data: {
                inventoryItemId: inventoryItemId
            },
            success: function (data) {
                if (data == "Deleted") {
                    $.pnotify({
                        title: 'Success',
                        type: 'success',
                        text: 'Record has been Deleted.'
                    });
                    var row = $("." + inventoryItemId).parent().get(0);
                    var atable = $('#InventoryItems').dataTable();
                    var pos = atable.fnGetPosition(row);
                    atable.fnDeleteRow(pos);
                } else {
                    $.pnotify({
                        title: 'Failure',
                        type: 'error',
                        text: 'Cannot delete, Variation exists.'
                    });
                }
            },
        });
    }

</script>

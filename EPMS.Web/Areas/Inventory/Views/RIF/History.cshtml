@model EPMS.Web.ViewModels.RIF.RifHistoryViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.Inventory.RIF.RIF.HistoryPageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
    string[] userPermissionsSet = (string[])HttpContext.Current.Session["UserPermissionSet"];
    var counter1 = 1;
    var counter2 = 1;
}

<div class="breadcrumb-container" dir="ltr">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Inventory/RIF/Index">
                @EPMS.Web.Resources.Inventory.RIF.RIF.ListPageBreadCrumb
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">@EPMS.Web.Resources.Inventory.RIF.RIF.DetailsPageBreadCrumb</a>
        </li>
    </ul>
</div>
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.Web.Resources.Inventory.RIF.RIF.DetailsPageHeading</small></h2>
</header>

<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
@using (Html.BeginForm("History", "RIF", FormMethod.Post, new { @id = "RIFForm", @class = "form-horizontal", role = "form" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(x => x.RecentRif.RIFId)
        @Html.HiddenFor(x => x.RecentRif.OrderId)
        @Html.HiddenFor(x => x.RecentRif.ReasonE)
        @Html.HiddenFor(x => x.RecentRif.ReasonA)
        @Html.HiddenFor(x => x.RecentRif.RecCreatedBy)
        @Html.HiddenFor(x => x.RecentRif.RecCreatedDate)
        @Html.HiddenFor(x => x.RecentRif.ManagerId)
        <div class="control-group row-fluid">
            <div class="form-legend centTitle">
                @EPMS.Web.Resources.Inventory.RIF.RIF.DetailsPageHeading
            </div>
            <div class="invoice-info">
                <div class="controls">
                    <a href="javascript:print()" rel="tooltip" title="" data-original-title="Print statistics" class="print"><i class="icon-print"></i> Print</a>
                </div>

                <div class="control-group row-fluid">
                    <div class="span6">
                        <div class="invoice-from">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>@EPMS.Web.Resources.RFI.RFI.InventoryManagerName:</th>
                                        <td>@(direction == "ltr" ? Model.RecentRif.ManagerName : Model.RecentRif.ManagerNameAr)</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.RFI.RFI.EmployeeId:</th>
                                        <td>@(Session["EmployeeID"] == null ? "" : Session["EmployeeID"].ToString())</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.RIF.RIF.RIFNumber:</th>
                                        <td>@Model.RecentRif.RIFId</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.RIF.RIF.ReturningReason:</th>
                                        <td>@(direction == "ltr" ? Model.RecentRif.ReasonE : Model.RecentRif.ReasonA)</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div class="span6">
                        <div class="invoice-infos">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>@EPMS.Web.Resources.RFI.RFI.Date:</th>
                                        <td>@Model.RecentRif.RecCreatedDate.ToShortDateString()</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.RFI.RFI.RequesterName:</th>
                                        <td>@Model.RecentRif.RequesterName</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Input Field end-->
        <!--Basic Responsive Table begin-->
        <div class="row-fluid" id="ress">
            <div class="span12">
                <table class="table table-striped table-responsive ">
                    <thead class="">
                        <tr>
                            <th>@EPMS.Web.Resources.RFI.RFI.Serial</th>
                            <th>@EPMS.Web.Resources.RFI.RFI.ItemName</th>
                            <th>@EPMS.Web.Resources.RFI.RFI.ItemCode</th>
                            <th>@EPMS.Web.Resources.RFI.RFI.SKUCode</th>
                            <th>@EPMS.Web.Resources.Inventory.RIF.RIF.ReturnedQuantity</th>
                        </tr>
                    </thead>
                    <tbody class="qouteAdd">
                        @if (Model.RifItems.Any())
                        {
                            foreach (var rifItem in Model.RifItems.ToList())
                            {
                                <tr class="gradeX">
                                    <td>
                                        @counter1
                                    </td>
                                    <td>
                                        @rifItem.ItemName
                                    </td>

                                    <td>
                                        @rifItem.ItemCode
                                    </td>

                                    <td>
                                        @rifItem.ItemSKUCode
                                    </td>
                                    <td>
                                        @rifItem.ItemQty
                                    </td>
                                </tr>
                                counter1 = counter1 + 1;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="alert alert-info alert-block">
            <i class="icon-alert icon-alert-info"></i>
            <strong>@EPMS.Web.Resources.Inventory.RIF.RIF.HistoryTableTitle</strong>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <table class="table table-striped table-responsive" id="tableSortableResMed">
                    <thead class="cf sorthead">
                        <tr>
                            <th>@EPMS.Web.Resources.Inventory.RIF.RIF.Serial</th>
                            <th>@EPMS.Web.Resources.Inventory.RIF.RIF.RifNo</th>
                            <th>@EPMS.Web.Resources.Inventory.RIF.RIF.Requester</th>
                            <th>@EPMS.Web.Resources.Inventory.RIF.RIF.Date</th>
                            <th>@EPMS.Web.Resources.Inventory.RIF.RIF.Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Rifs.Any())
                        {
                            foreach (var rifItem in Model.Rifs.ToList())
                            {
                                <tr class="gradeX">
                                    <td>
                                        @counter2
                                    </td>
                                    <td>
                                        <a href="~/Inventory/RIF/Details/@rifItem.RIFId?from=History">@rifItem.RIFId</a>
                                    </td>
                                    <td>
                                        @rifItem.RequesterName
                                    </td>
                                    <td>
                                        @rifItem.RecCreatedDateString
                                    </td>
                                    <td>
                                        @if (rifItem.Status == 6)
                                        {
                                            @EPMS.Web.Resources.CMS.Order.Pending
                                        }
                                        else if (rifItem.Status == 3)
                                        {
                                            @EPMS.Web.Resources.CMS.Order.Rejected
                                        }
                                        else if (rifItem.Status == 2)
                                        {
                                            @EPMS.Web.Resources.CMS.Order.Accepted
                                        }
                                    </td>
                                </tr>
                                counter2 = counter2 + 1;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.Web.Resources.RFI.RFI.NotesE</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextAreaFor(m => m.RecentRif.NotesE, new { @id = "RFINotesE", @class = "toBeDisabled" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.Web.Resources.RFI.RFI.NotesA</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextAreaFor(m => m.RecentRif.NotesA, new { @id = "RFINotesA", @class = "toBeDisabled" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="jobTitle">@EPMS.Web.Resources.RFI.RFI.RequestStatus</label>
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.DropDownListFor(model => model.RecentRif.Status, new[]
                        {
                            new SelectListItem { Text = "--Select--", Value = "" },
                            new SelectListItem { Value = "6" , Text = EPMS.Web.Resources.CMS.Order.Pending },
                            new SelectListItem { Value = "3" , Text = EPMS.Web.Resources.CMS.Order.Rejected },
                            new SelectListItem { Value = "2" , Text = EPMS.Web.Resources.CMS.Order.Accepted }
                        }, new { @id = "RFIStatusDDL", @class = "toBeDisabled" })
                    </div>
                </div>

            </div>
        </div>
        @if (Model.RecentRif.Status != 2)
        {
            <div id="submitDiv" class="control-group row-fluid">
                <div class="span3 span-inset">
                    <button type="submit" class="btn">@EPMS.Web.Resources.RFI.RFI.Submit</button>
                </div>
            </div>
            if (userPermissionsSet.Contains("RIFCreate"))
            {
                <div id="editDiv" class="control-group row-fluid">
                    <div class="span1 span-inset">
                        <a href="~/Inventory/RIF/Create/@Model.RecentRif.RIFId" class="btn">@EPMS.Web.Resources.Shared.Common.Edit</a>
                    </div>
                </div>
            }
        }
    </div>
}

<script src="~/RichTextEditor/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        if ('@Model.RecentRif.Status' != '2') {
            $('.toBeDisabled:input').attr('disabled', false);
        } else {
            $('.toBeDisabled:input').attr('disabled', true);
        }
        CKEDITOR.replace('RFINotesE', {
            filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
        });
        CKEDITOR.replace('RFINotesA', {
            filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
        });
    });
</script>
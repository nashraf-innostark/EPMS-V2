@using System.Configuration
@model EPMS.Web.ViewModels.TIR.TirHistoryViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.Inventory.TIR.TIRDetail.HistoryPageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
    string[] userPermissionsSet = (string[])HttpContext.Current.Session["UserPermissionSet"];
    var counter1 = 1;
    var counter2 = 1;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Inventory/TransferItem/Index">
                @EPMS.Web.Resources.Inventory.TIR.TIRDetail.BCTitleIndex
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">
                @EPMS.Web.Resources.Inventory.TIR.TIRDetail.BCTitleView
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.Header</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
@using (Html.BeginForm("History", "TransferItem", FormMethod.Post, new { @class = "form-horizontal", @id = "AddEditItemReleaseForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(model => model.RecentTir.Id)
        <div class="control-group row-fluid">
            <div class="form-legend centTitle">
                @EPMS.Web.Resources.Inventory.TIR.TIRDetail.Title
            </div>
            <div class="invoice-info">
                <div class="controls">
                    <a href="javascript:print()" rel="tooltip" title="" data-original-title="Print statistics" class="print"><i class="icon-print"></i>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.Print</a>
                </div>
                <div class="control-group row-fluid">
                    <div class="span6">
                        <div class="invoice-from">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.ManagerName</th>
                                        <td>@(direction == "ltr" ? Model.RecentTir.ManagerName : Model.RecentTir.ManagerNameAr)</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.EmployeeId</th>
                                        <td>@(Session["EmployeeID"] == null ? "" : Session["EmployeeID"].ToString())</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.TIRNo</th>
                                        <td>@Model.RecentTir.FormNumber</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.TransferReason</th>
                                        <td>@(direction == "ltr" ? Model.RecentTir.DefectivenessE : Model.RecentTir.DefectivenessA)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="span6">
                        <div class="invoice-infos">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.Date</th>
                                        <td>@Model.RecentTir.RecCreatedDate.ToShortDateString()</td>
                                    </tr>
                                    <tr>
                                        <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.RequesterName</th>
                                        <td>@Model.RecentTir.RequesterName</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" id="ress">
            <div class="span12">
                <table class="table table-striped table-responsive ">
                    <thead class="">
                        <tr>
                            <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.Serial</th>
                            <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.ItemName</th>
                            <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.ItemCode</th>
                            <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.SKUCode</th>
                            <th>@EPMS.Web.Resources.Inventory.TIR.TIRDetail.TransferQuantity</th>
                        </tr>
                    </thead>
                    <tbody class="qouteAdd">
                        @if (Model.TirItems.Any())
                        {
                            foreach (var tirItem in Model.TirItems.ToList())
                            {
                                <tr>
                                    <td>
                                        @counter1
                                    </td>
                                    <td>
                                        @tirItem.ItemName
                                    </td>
                                    <td>
                                        @tirItem.ItemCode
                                    </td>
                                    <td>
                                        @tirItem.ItemSKUCode
                                    </td>
                                    <td>
                                        @tirItem.ItemQty
                                    </td>
                                </tr>
                                counter1 = counter1 + 1;
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <div class="alert alert-info alert-block">
            <i class="icon-alert icon-alert-info"></i>
            <strong>Transfer Item Request (TIR) History</strong>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <table class="table table-striped table-responsive" id="tableSortableResMed">
                    <thead class="cf sorthead">
                        <tr>
                            <th>Serial</th>
                            <th>Transfer Item Request (TIR) Number</th>
                            <th>Requester</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Tirs.Any())
                        {
                            foreach (var tir in Model.Tirs)
                            {
                                <tr class="gradeX">
                                    <td>
                                        @(counter2)
                                    </td>
                                    <td>
                                        <a href="~/Inventory/TransferItem/Detail/@tir.Id?from=History">@tir.FormNumber</a>
                                    </td>
                                    <td>
                                        @tir.RequesterName
                                    </td>
                                    <td>
                                        @tir.RecCreatedDateString
                                    </td>
                                    <td>
                                        @if (tir.Status == 3)
                                        {
                                            @:Pending
                                        }
                                        else if (tir.Status == 2)
                                        {
                                            @:Rejected
                                        }
                                        else if (tir.Status == 1)
                                        {
                                            @:Accepted
                                        }
                                    </td>
                                </tr>
                                        counter2 = counter2 + 1;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div id="CKNotes" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextAreaFor(model => model.RecentTir.NotesE, new { @id = "NotesEn", @class = "toBeDisabledCK" })
                    </div>
                </div>
            </div>
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        @Html.TextAreaFor(model => model.RecentTir.NotesA, new { @id = "NotesAr", @class = "toBeDisabledCK" })
                    </div>
                </div>
            </div>
        </div>
        <div id="Notes" style="display: none">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        <input type="text" id="notesE" class="toBeDisable" />
                    </div>
                </div>
            </div>
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                </div>
                <div class="span9">
                    <div class="controls">
                        <input type="text" id="notesA" class="toBeDisable" />
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="control-group row-fluid">
                <div class="span3">
                    <label class="control-label" for="jobTitle">@EPMS.Web.Resources.Inventory.TIR.TIRDetail.RequestStatus</label>
                </div>
                <div class="span2">
                    <div class="controls">
                        @Html.DropDownListFor(model => model.RecentTir.Status, new[] {
                        new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Pending, Value = "3" },
                        new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Accepted, Value = "1" },
                        new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Rejected, Value = "2" } },
                        new { @id = "Status", @class = "select2me disableDdl" })
                    </div>
                </div>
            </div>
        </div>
        @if (Model.RecentTir.Status != 1)
        {
            <div id="SubmitIrf" class="control-group row-fluid">
                <div class="span3 span-inset">
                    <button type="submit" class="btn">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Submit</button>
                </div>
            </div>
            if (userPermissionsSet.Contains("TIRCreate"))
            {
                <div id="EditIrf" class="control-group row-fluid">
                    <div class="span3 span-inset">
                        <a href="@(ConfigurationManager.AppSettings["SiteURL"])/Inventory/TransferItem/Create/@Model.RecentTir.Id" class="btn">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.EditIRF</a>
                    </div>
                </div>
            }
        }
    </div>
}

<script src="~/RTE/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        if ('@Model.RecentTir.Status' == '1') {
            $('.' + 'toBeDisable' + ':input').attr('readonly', true);
            $('.toBeDisabledCK:input').attr('disabled', true);
            $('.disableDdl').select2('disable');
            @*var noteEn = '@Html.Raw(Model.RecentTir.NotesE)';
            var regex = /(<([^>]+)>)/ig;
            var result = noteEn.replace(regex, "");
            $("#notesE").val(result);
            var noteAr = '@Html.Raw(Model.RecentTir.NotesA)';
            regex = /(<([^>]+)>)/ig;
            result = noteAr.replace(regex, "");
            $("#notesA").val(result);
            $("#Notes").show();*@
            $("#EditIrf").hide();
            $("#SubmitIrf").hide();
        } else {
            
        }
        CKEDITOR.replace('NotesEn', {
            filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
        });
        CKEDITOR.replace('NotesAr', {
            filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
        });
        $("#CKNotes").show();
    });
</script>
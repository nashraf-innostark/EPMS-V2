        CKEDITOR.replace('NotesEn', {
            filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
        });
        CKEDITOR.replace('NotesAr', {
            filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
        });
        $("#CKNotes").show();
        if ('@ViewBag.IsManager' != "True" || '@Model.PurchaseOrder.Status' == '1' || '@ViewBag.From' == 'History') {
            $('.toBeDisabled:input').attr('disabled', true);
            $('.disableDdl').select2('disable');
            $("#SubmitTir").hide();
        }
        if ('@ViewBag.From' == 'History') {
            $('.toBeDisable:input').attr('readonly', true);
            $('.disableDdl').select2('disable');
            $("#SubmitTir").hide();
        }
        $(document).on('focusout', '.UnitPrice', function (ev) {
            debugger;
            if ('@ViewBag.IsManager' == 'True') {
                var rowId = $(this).parent().parent().attr("id");
                var itemQty = parseInt($("#OrderItems_" + rowId + "__ItemQty").val());
                var unitPrice = parseInt($("#OrderItems_" + rowId + "__UnitPrice").val());
                if (!isNaN(itemQty) && !isNaN(unitPrice)) {
                    $("#Total_" + rowId).text(itemQty * unitPrice);
                }
                return true;
            }
            return;
        });
    });

    function validateVendors(event) {
        if ('@ViewBag.IsManager' == "True" && parseInt($("#Status").val()) == 1) {
            var index = $("#POTableBody").children("tr").length;
            for (var i = 0; i < index; i++) {
                var vendorId = $("#OrderItems_" + i + "__VendorId").val();
                if (vendorId == 0 || vendorId == "" || vendorId == null) {
                    $("#VendorError_" + (i + 1)).text("Please select vendor");
                    $('html,body').animate({
                        scrollTop: $(".VendorError_" + (i + 1)).offset().top
                    }, 'slow');
                    event.preventDefault();
                    return false;
                } else {
                    $("#VendorError_" + (i + 1)).text("");
                }
            }
        }
        return true;
    }
</script>
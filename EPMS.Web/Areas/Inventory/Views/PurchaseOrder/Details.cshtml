@using System.Configuration
@model EPMS.Web.ViewModels.PurchaseOrder.PurchaseOrderDetailsViewModel

@{
    ViewBag.Title = "View Perchase Order (PO) View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
    string[] userPermissionsSet = (string[])HttpContext.Current.Session["UserPermissionSet"];
    int i = 0;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Inventory/PurchaseOrder/Index">
                Inventory Perchase Order (PO) List
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">
                Inventory Perchase Order (PO) View
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>Perchase Order (PO) View</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
@using (Html.BeginForm("Details", "PurchaseOrder", FormMethod.Post, new { @class = "form-horizontal", @id = "AddEditItemReleaseForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(model => model.PurchaseOrder.PurchaseOrderId)
        @Html.HiddenFor(model => model.PurchaseOrder.FormNumber)
        @Html.HiddenFor(model => model.PurchaseOrder.ManagerId)
        @Html.HiddenFor(model => model.PurchaseOrder.RecCreatedBy)
        @Html.HiddenFor(model => model.PurchaseOrder.RecCreatedDate)

        <div class="control-group row-fluid">
            <div class="form-legend centTitle">
                Perchase Order (PO)
            </div>
            <div class="invoice-info">
                <div class="controls">
                    <a href="javascript:print()" rel="tooltip" title="" data-original-title="Print statistics" class="print"><i class="icon-print"></i>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Print</a>
                </div>
                <div class="control-group row-fluid">
                    <div class="span6">
                        <div class="invoice-from">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>Employee Name:</th>
                                        <td>@(direction == "ltr" ? Session["UserFullName"].ToString() : Session["UserFullNameA"].ToString())</td>
                                    </tr>
                                    <tr>
                                        <th>Employee Id:</th>
                                        <td>@(Session["EmployeeID"] == null ? "" : Session["EmployeeID"].ToString())</td>
                                    </tr>
                                    <tr>
                                        <th>PO#:</th>
                                        <td>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRF @Model.PurchaseOrder.PurchaseOrderId</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="span6">
                        <div class="invoice-infos">
                            <table>
                                <tbody>
                                    @if (ViewBag.IsManager)
                                    {
                                        <tr>
                                            <th>Date:</th>
                                            <td>@Model.PurchaseOrder.RecCreatedDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <th>Requester Name:</th>
                                            <td>@(direction == "ltr" ? Model.PurchaseOrder.RequesterName : Model.PurchaseOrder.RequesterNameAr)</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <th>Date:</th>
                                            <td>@Model.PurchaseOrder.RecCreatedDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <th>Inventory Manager Name:</th>
                                            <td>@(direction == "ltr" ? Model.PurchaseOrder.ManagerName : Model.PurchaseOrder.ManagerNameAr)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row-fluid" id="ress">
                    <div class="span12">
                        <table class="table table-striped table-responsive ">
                            <thead class="">
                                @if (ViewBag.IsManager)
                                {
                                    <tr>
                                        <th>Serial</th>
                                        <th>Item Name</th>
                                        <th>Item Code</th>
                                        <th>SKU Code</th>
                                        <th>Vendor</th>
                                        <th>Needed Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <th>Serial</th>
                                        <th>Item Name</th>
                                        <th>Item Code</th>
                                        <th>SKU Code</th>
                                        <th>Needed Quantity</th>
                                    </tr>
                                }
                            </thead>
                            <tbody class="qouteAdd">
                                @if (ViewBag.IsManager)
                                {
                                    i = 0;
                                    foreach (var itemReleaseDetail in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>@(i += 1)</td>
                                            <td>@itemReleaseDetail.ItemName</td>
                                            <td>@itemReleaseDetail.ItemCode</td>
                                            <td>@itemReleaseDetail.ItemSKUCode</td>
                                            <td>
                                                <select class="tableDbM" name="selectBoxFilter2" id="selectBoxFilter2">
                                                    <option selected="" value="All">Masar</option>
                                                    <option value="Beige">Wasail</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input class="n1 tableDbM" type="text" name="numbers" value="@itemReleaseDetail.ItemQty">
                                            </td>
                                            <td>@itemReleaseDetail.UnitPrice</td>
                                            <td>@(itemReleaseDetail.ItemQty * itemReleaseDetail.UnitPrice)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    i = 0;
                                    foreach (var itemReleaseDetail in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>@(i += 1)</td>
                                            <td>@itemReleaseDetail.ItemName</td>
                                            <td>@itemReleaseDetail.ItemCode</td>
                                            <td>@itemReleaseDetail.ItemSKUCode</td>
                                            <td>@itemReleaseDetail.ItemQty</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="CKNotes" style="display: none">
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                @Html.TextAreaFor(model => model.PurchaseOrder.NotesE, new { @id = "NotesEn", @class = "" })
                            </div>
                        </div>
                    </div>
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                @Html.TextAreaFor(model => model.PurchaseOrder.NotesA, new { @id = "NotesAr", @class = "" })
                            </div>
                        </div>
                    </div>
                </div>
                <div id="Notes" style="display: none">
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                <input type="text" id="notesE" class="toBeDisable" />
                            </div>
                        </div>
                    </div>
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                <input type="text" id="notesA" class="toBeDisable" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="control-group row-fluid">
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="jobTitle">Request Status</label>
                        </div>
                        <div class="span2">
                            <div class="controls">
                                @Html.DropDownListFor(model => model.PurchaseOrder.Status, new[] {
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Pending, Value = "3" },
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Accepted, Value = "1" },
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Rejected, Value = "2" } },
                           new { @id = "Status", @class = "select2me disableDdl" })
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.PurchaseOrder.Status != 1)
                {
                    <div id="SubmitTir" class="control-group row-fluid">
                        <div class="span3 span-inset">
                            <button type="submit" class="btn">Submit</button>
                        </div>
                    </div>
                    if (userPermissionsSet.Contains("POCreate"))
                    {
                        <div id="EditTir" class="control-group row-fluid">
                            <div class="span3 span-inset">
                                <a href="@(ConfigurationManager.AppSettings["SiteURL"])/Inventory/Purchaseorder/Create/@Model.PurchaseOrder.PurchaseOrderId" class="btn">Edit</a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
}
<script src="~/RTE/ckeditor.js"></script>
<script>
    $(document).ready(function () {

        if ('@ViewBag.IsManager' != "True" || '@Model.PurchaseOrder.Status' == '1') {
            $('.' + 'toBeDisable' + ':input').attr('readonly', true);
            $('.disableDdl').select2('disable');
            $("#SubmitTir").hide();
            $("#EditTir").hide();
            var noteEn = '@Html.Raw(Model.PurchaseOrder.NotesE)';
            var regex = /(<([^>]+)>)/ig;
            var result = noteEn.replace(regex, "");
            $("#notesE").val(result);
            var noteAr = '@Html.Raw(Model.PurchaseOrder.NotesA)';
            regex = /(<([^>]+)>)/ig;
            result = noteAr.replace(regex, "");
            $("#notesA").val(result);
            $("#Notes").show();
        } else {
            CKEDITOR.replace('NotesEn', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            CKEDITOR.replace('NotesAr', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            $("#CKNotes").show();
        }
    });
</script>
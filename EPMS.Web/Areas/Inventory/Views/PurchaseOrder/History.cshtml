@using System.Configuration
@model EPMS.Web.ViewModels.PurchaseOrder.POHistoryViewModel

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
    string[] userPermissionsSet = (string[])HttpContext.Current.Session["UserPermissionSet"];
    int i = 0;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="~/Inventory/PurchaseOrder/Index">
                Inventory Perchase Order (PO) List
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">
                Inventory Perchase Order (PO) View
            </a>
        </li>
    </ul>
</div>

<header>
    <i class="icon-big-notepad"></i>
    <h2><small>Perchase Order (PO) View</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
@using (Html.BeginForm("History", "PurchaseOrder", FormMethod.Post, new { @class = "form-horizontal", @id = "AddEditItemReleaseForm", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        @Html.HiddenFor(model => model.RecentPo.PurchaseOrderId)
        @Html.HiddenFor(model => model.RecentPo.FormNumber)
        @Html.HiddenFor(model => model.RecentPo.ManagerId)
        @Html.HiddenFor(model => model.RecentPo.RecCreatedBy)
        @Html.HiddenFor(model => model.RecentPo.RecCreatedDate)

        <div class="control-group row-fluid">
            <div class="form-legend centTitle">
                Perchase Order (PO)
            </div>
            <div class="invoice-info">
                <div class="controls">
                    <a href="javascript:print()" rel="tooltip" title="" data-original-title="Print statistics" class="print"><i class="icon-print"></i>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Print</a>
                </div>
                <div class="control-group row-fluid">
                    <div class="span6">
                        <div class="invoice-from">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>Employee Name:</th>
                                        <td>@(direction == "ltr" ? Session["UserFullName"].ToString() : Session["UserFullNameA"].ToString())</td>
                                    </tr>
                                    <tr>
                                        <th>Employee Id:</th>
                                        <td>@(Session["EmployeeID"] == null ? "" : Session["EmployeeID"].ToString())</td>
                                    </tr>
                                    <tr>
                                        <th>PO#:</th>
                                        <td>@EPMS.Web.Resources.Inventory.IRF.View.IRFView.IRF @Model.RecentPo.PurchaseOrderId</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="span6">
                        <div class="invoice-infos">
                            <table>
                                <tbody>
                                    @if (ViewBag.IsManager)
                                    {
                                        <tr>
                                            <th>Date:</th>
                                            <td>@Model.RecentPo.RecCreatedDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <th>Requester Name:</th>
                                            <td>@(direction == "ltr" ? Model.RecentPo.RequesterName : Model.RecentPo.RequesterNameAr)</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <th>Date:</th>
                                            <td>@Model.RecentPo.RecCreatedDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <th>Inventory Manager Name:</th>
                                            <td>@(direction == "ltr" ? Model.RecentPo.ManagerName : Model.RecentPo.ManagerNameAr)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row-fluid" id="ress">
                    <div class="span12">
                        <table class="table table-striped table-responsive ">
                            <thead class="">
                                @if (ViewBag.IsManager)
                                {
                                    <tr>
                                        <th>Serial</th>
                                        <th>Item Name</th>
                                        <th>Item Code</th>
                                        <th>SKU Code</th>
                                        <th>Vendor</th>
                                        <th>Needed Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                    </tr>
                                }
                            </thead>
                            <tbody class="qouteAdd">
                                @if (ViewBag.IsManager)
                                {
                                    i = 0;
                                    for (int po = 0; po < Model.PurchaseOrdersItems.Count(); po++)
                                    {
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].ItemId)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].PurchaseOrderId)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].ItemVariationId)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].ItemDetails)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].IsItemDescription)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].IsItemSKU)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].PlaceInDepartment)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].RecCreatedBy)
                                        @Html.HiddenFor(m => m.PurchaseOrdersItems[po].RecCreatedDate)
                                        <tr>
                                            <td>@(i += 1)</td>
                                            <td>@Html.DisplayFor(m => m.PurchaseOrdersItems[po].ItemName)</td>
                                            <td>@Html.DisplayFor(m => m.PurchaseOrdersItems[po].ItemCode)</td>
                                            <td>@Html.DisplayFor(m => m.PurchaseOrdersItems[po].ItemSKUCode)</td>
                                            <td>
                                                <div class="span9">
                                                    @if (direction == "ltr")
                                                    {
                                                        <div class="controls">
                                                            @Html.DropDownListFor(m => m.PurchaseOrdersItems[po].VendorId, new SelectList(Model.Vendors, "VendorId", "VendorNameEn", Model.PurchaseOrdersItems[po].VendorId), "--Select--", new { @class = "select2me tableDbM" })
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="controls">
                                                            @Html.DropDownListFor(m => m.PurchaseOrdersItems[po].VendorId, new SelectList(Model.Vendors, "VendorId", "VendorNameAr", Model.PurchaseOrdersItems[po].VendorId), "--Select--", new { @class = "select2me tableDbM" })
                                                        </div>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @Html.TextBoxFor(m => m.PurchaseOrdersItems[po].ItemQty, new { @class = "tableDbM" })
                                            </td>
                                            <td>@Html.DisplayFor(m => m.PurchaseOrdersItems[po].UnitPrice)</td>
                                            <td>@(Model.PurchaseOrdersItems[po].ItemQty * Model.PurchaseOrdersItems[po].UnitPrice)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="alert alert-info alert-block">
                    <i class="icon-alert icon-alert-info"></i>
                    <strong>Perchase Order (PO) History</strong>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <table class="table table-striped table-responsive" id="tableSortableResMed">
                            <thead class="cf sorthead">
                                <tr>
                                    <th>Serial</th>
                                    <th>Perchase Order (PO) Number</th>
                                    <th>Requester</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PurchaseOrders.Any())
                                {
                                    foreach (var itemRelease in Model.PurchaseOrders)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @i
                                            </td>
                                            <td>
                                                <a href="~/Inventory/PurchaseOrder/Details/@itemRelease.PurchaseOrderId?from=History">@itemRelease.PurchaseOrderId</a>
                                            </td>
                                            <td>
                                                @(direction == "ltr" ? itemRelease.RequesterName : itemRelease.RequesterNameAr)
                                            </td>
                                            <td>
                                                @itemRelease.RecCreatedDate.ToShortDateString()
                                            </td>
                                            <td>
                                                @if (itemRelease.Status == 3)
                                                {
                                                    @EPMS.Web.Resources.Inventory.IRF.View.IRFView.StatusPending
                                                }
                                                else if (itemRelease.Status == 1)
                                                {
                                                    @EPMS.Web.Resources.Inventory.IRF.View.IRFView.StatusAccepted
                                                }
                                                else if (itemRelease.Status == 2)
                                                {
                                                    @EPMS.Web.Resources.Inventory.IRF.View.IRFView.StatusRejected
                                                }
                                            </td>
                                        </tr>
                                                i = i + 1;
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
                <div id="CKNotes" style="display: none">
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                @Html.TextAreaFor(model => model.RecentPo.NotesE, new { @id = "NotesEn", @class = "" })
                            </div>
                        </div>
                    </div>
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                @Html.TextAreaFor(model => model.RecentPo.NotesA, new { @id = "NotesAr", @class = "" })
                            </div>
                        </div>
                    </div>
                </div>
                <div id="Notes" style="display: none">
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="Notes">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.Notes</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                <input type="text" id="notesE" class="toBeDisable" />
                            </div>
                        </div>
                    </div>
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="NotesAr">@EPMS.Web.Resources.Inventory.IRF.View.IRFView.NotesAr</label>
                        </div>
                        <div class="span9">
                            <div class="controls">
                                <input type="text" id="notesA" class="toBeDisable" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="control-group row-fluid">
                    <div class="control-group row-fluid">
                        <div class="span3">
                            <label class="control-label" for="jobTitle">Request Status</label>
                        </div>
                        <div class="span2">
                            <div class="controls">
                                @Html.DropDownListFor(model => model.RecentPo.Status, new[] {
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Pending, Value = "3" },
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Accepted, Value = "1" },
                           new SelectListItem { Text = EPMS.Web.Resources.CMS.Order.Rejected, Value = "2" } },
                           new { @id = "Status", @class = "select2me disableDdl" })
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.RecentPo.Status != 1)
                {
                    <div id="SubmitTir" class="control-group row-fluid">
                        <div class="span3 span-inset">
                            <button type="submit" class="btn">Submit</button>
                        </div>
                    </div>
                    if (userPermissionsSet.Contains("POCreate"))
                    {
                        <div id="EditTir" class="control-group row-fluid">
                            <div class="span3 span-inset">
                                <a href="@(ConfigurationManager.AppSettings["SiteURL"])/Inventory/Purchaseorder/Create/@Model.RecentPo.PurchaseOrderId" class="btn">Edit PO</a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
}
<script src="~/RTE/ckeditor.js"></script>
<script>
    $(document).ready(function () {

        if ('@ViewBag.IsManager' != "True" || '@Model.RecentPo.Status' == '1') {
            $('.' + 'toBeDisable' + ':input').attr('readonly', true);
            $('.disableDdl').select2('disable');
            $("#SubmitTir").hide();
            var noteEn = '@Html.Raw(Model.RecentPo.NotesE)';
            var regex = /(<([^>]+)>)/ig;
            var result = noteEn.replace(regex, "");
            $("#notesE").val(result);
            var noteAr = '@Html.Raw(Model.RecentPo.NotesA)';
            regex = /(<([^>]+)>)/ig;
            result = noteAr.replace(regex, "");
            $("#notesA").val(result);
            $("#Notes").show();
        } else {
            CKEDITOR.replace('NotesEn', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            CKEDITOR.replace('NotesAr', {
                filebrowserBrowseUrl: $("#siteURL").val() + '/RTB/ckfinder.html',
            });
            $("#CKNotes").show();
        }
    });
</script>
@using (Html.BeginForm("Create", "DIF", FormMethod.Post, new { @id = "DIFForm", @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(x=>x.Dif.Id)
    @Html.HiddenFor(x=>x.Dif.FormNumber)
    @Html.HiddenFor(x => x.Dif.ManagerId)
    @Html.HiddenFor(x => x.Dif.RecCreatedBy)
    @Html.HiddenFor(x => x.Dif.RecCreatedDate)
    <div class="container-fluid">
        <!--Input Field begin-->
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="createdBy">@EPMS.Web.Resources.RFI.RFI.CreatedBy  </label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Dif.RequesterName, new { @readonly = true, @id = "createdBy" })
                </div>
            </div>
        </div>
        <!--Input Field end-->
        <!--Input Field begin-->
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="greeting">@EPMS.Web.Resources.Inventory.DIF.DIF.Defectiveness</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Dif.DefectivenessE)
                </div>
                @Html.ValidationMessageFor(m => m.Dif.DefectivenessE, String.Empty, new { @class = "required" })

            </div>
        </div>
        <!--Input Field end-->
        <!--Input Field begin-->
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="greetinga">@EPMS.Web.Resources.Inventory.DIF.DIF.DefectivenessArabic</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Dif.DefectivenessA)
                </div>
                @Html.ValidationMessageFor(m => m.Dif.DefectivenessA, String.Empty, new { @class = "required" })
            </div>
        </div>
        <!--Input Field end-->
        
        <!--Basic Responsive Table begin-->
        <div class="row-fluid" id="ress">
            <div class="span12">
                <table class="table table-striped table-responsive ">
                    <thead class="">
                        <tr>
                            <th>@EPMS.Web.Resources.Shared.Common.Serial</th>
                            <th style="width: 85%">@EPMS.Web.Resources.RFI.RFI.ItemDetails</th>
                            <th>@EPMS.Web.Resources.RFI.RFI.Quantity</th>

                            <th style="width: 4%">@EPMS.Web.Resources.RFI.RFI.Delete</th>
                        </tr>
                    </thead>
                    <tbody class="qouteAdd" id="DifItemsTableBody">
                        @if (Model.DifItem.Any())
                        {
                            for (int i = 0; i < Model.DifItem.Count(); i++)
                            {
                                <tr data-id=@i>
                                    <td style='display:none'>
                                        <input name='DifItem.Index' type='hidden' value=@i />
                                        
                                        @Html.HiddenFor(m => m.DifItem[i].IsItemDescription)
                                        @Html.HiddenFor(m => m.DifItem[i].IsItemSKU)
                                        @Html.HiddenFor(m => m.DifItem[i].ItemVariationId)
                                        @Html.HiddenFor(m => m.DifItem[i].ItemId)
                                        @Html.HiddenFor(m => m.DifItem[i].PlaceInDepartment)
                                    </td>
                                    <td>
                                        <div class="control-group row-fluid">
                                            <div class="span1">
                                                <label class="control-label serialNumber">@(i+1)</label>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.TextAreaFor(m => m.DifItem[i].ItemDetails, new { @class = "auto-resize",@rows=2 })
                                        
                                        <button type="button" class="btn itemAdder" data-toggle="modal" data-target="#itemSearcher">+</button>
                                        @Html.ValidationMessageFor(m => m.DifItem[i].ItemDetails)
                                    </td>
                                    <td class="quantity">
                                        @Html.TextBoxFor(m => m.DifItem[i].ItemQty, new { @class = "n1", @rows = 2 })
                                        @Html.ValidationMessageFor(m => m.DifItem[i].ItemQty,null, new { @class = "required"})
                                    </td>


                                    <td class="delete">
                                        <i class="icon-photon minus deleteRow"></i>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr data-id="0">
                                <td style='display:none'>
                                    <input name='DifItem.Index' type='hidden' value='0' />
                                    <input name='DifItem[0].IsItemDescription' id='DifItem_0__IsItemDescription' type='hidden' />
                                    <input name='DifItem[0].IsItemSKU' id='DifItem_0__IsItemSKU' type='hidden' />
                                    <input name='DifItem[0].ItemVariationId' id='DifItem_0__ItemVariationId' type='hidden' />
                                    <input name='DifItem[0].PlaceInDepartment' id='DifItem_0__PlaceInDepartment' type='hidden' />
                                </td>
                                <td>
                                    <div class="control-group row-fluid">
                                        <div class="span1">
                                            <label class="control-label serialNumber">1</label>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <textarea rows="2" id='DifItem_0__ItemDetails' class="auto-resize" data-val="true" data-val-required="The Item Details field is required." name="DifItem[0].ItemDetails"></textarea>
                                    <button type="button" class="btn itemAdder" data-toggle="modal" data-target="#itemSearcher">+</button>
                                    <span class="field-validation-valid required" data-valmsg-for="DifItem[0].ItemDetails" data-valmsg-replace="true"></span>
                                </td>
                                <td class="quantity">
                                    <input class="n1" type="text" name="DifItem[0].ItemQty" value="0" data-val="true" data-val-number="The field Item Qty must be a number." data-val-range="Please enter valid quantity" data-val-range-max="2147483647" data-val-range-min="1" data-val-required="The Item Qty field is required.">
                                    <span class="field-validation-valid required" data-valmsg-for="DifItem[0].ItemQty" data-valmsg-replace="true"></span>
                                </td>


                                <td class="delete">
                                    <i class="icon-photon minus deleteRow"></i>
                                </td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>

            <div class="control-group row-fluid">
                <div class="span3 span-inset">
                    <button type="button" class="btn trAdder">@EPMS.Web.Resources.RFI.RFI.Add</button>

                </div>
            </div>
        </div>
        <!--Basic Responsive Table end-->
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.Web.Resources.RFI.RFI.NotesE</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextAreaFor(m => m.Dif.NotesE, new { @id = "RFINotesE" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">@EPMS.Web.Resources.RFI.RFI.NotesA</label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextAreaFor(m => m.Dif.NotesA, new { @id = "RFINotesA" })
                </div>
            </div>
        </div>
       
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn">@EPMS.Web.Resources.RFI.RFI.Submit</button>
            </div>
        </div>
    </div>
        <!-- end container -->
}




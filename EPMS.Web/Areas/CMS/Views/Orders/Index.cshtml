@model EPMS.Web.ViewModels.Orders.OrdersListViewModel

@{
    ViewBag.Title = EPMS.Web.Resources.CMS.Order.PTIndex;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.Web.Resources.Shared.Common.TextDirection;
}

<!-- Navigation Bar -->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            @ViewBag.Title
        </li>
    </ul>
</div>
<!-- Page heading -->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@ViewBag.Title</small></h2>
    @if (Model.SearchRequest.Role == "Customer")
    {
        <h3><small><a href="~/CMS/Orders/Create">@EPMS.Web.Resources.CMS.Order.CreateNew</a></small></h3>
    }
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
<!-- Page heading ends -->

<form class="form-horizontal">
    @Html.HiddenFor(model => model.SearchRequest.SearchString, new { id = "searchString" });
    <div class="container-fluid">
        <!--Sortable Responsive Media Table begin-->
        <div class="row-fluid">
            <div class="span12">
                <table class="table table-striped table-responsive" id="OrdersListTable">
                    <thead class="">
                        <tr>
                            <th></th>
                            <th>@EPMS.Web.Resources.CMS.Order.OrderNo</th>
                            <th>@EPMS.Web.Resources.CMS.Order.ClientName</th>
                            <th>@EPMS.Web.Resources.CMS.Order.Quotation</th>
                            <th>@EPMS.Web.Resources.CMS.Order.Invoice</th>
                            <th>@EPMS.Web.Resources.CMS.Order.Reciept</th>
                            <th>@EPMS.Web.Resources.CMS.Order.Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        var siteUrl = $('#siteURL').val();
        var dir = '@direction';
        var oTable = $('#OrdersListTable').dataTable({
            "sPaginationType": "bootstrap",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": siteUrl + "/Orders/Index",
            "sServerMethod": "POST",
            "aoColumns": [
                {
                    "aTargets": [0],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["OrderId"];
                    },
                    "bVisible": false,
                    "bSortable": false
                },
                {
                    "aTargets": [1],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        var element;
                        var val;
                        var orderId;
                        val = full["OrderNo"];
                        orderId = full["OrderId"];
                        element = '<a href="Create/' + orderId + '">' + val + '</a>';
                        return element;
                    },
                    "bSortable": true
                },
                {
                    "aTargets": [2],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        var element = "";
                        if ('@direction' == "ltr") {
                            element = full["Customer"].CustomerNameE;
                        }
                        if ('@direction' == "rtl") {
                            element = full["Customer"].CustomerNameA;
                        }
                        return element;
                    }
                },
                {
                    "aTargets": [3],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {

                    }
                },
                {
                    "aTargets": [4],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {

                    }
                },
                {
                    "aTargets": [5],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {

                    }
                },
                {
                    "aTargets": [6],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        var value = "";
                        if (full["OrderStatus"] == 1) {
                            value = '@EPMS.Web.Resources.CMS.Order.Pending';
                        } else if (full["OrderStatus"] == 2) {
                            value = '@EPMS.Web.Resources.CMS.Order.OnGoing';
                        } else if (full["OrderStatus"] == 3) {
                            value = '@EPMS.Web.Resources.CMS.Order.Canceled';
                        }
                        return value;
                    }
                }
            ],
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "search", "value": $('input').val() });
            },
            "oLanguage": {
                "sProcessing": "Fetching record(s)",
                //"sProcessing": "<img alt=\"Unread\" id=\"ajaxLoadImg\" src=\"/Images\/Gallery\/ajax_loader_red_512.gif\" />",
                "sInfoEmpty": "No matching record(s) found",
                "sEmptyTable": "No record(s) found",
            },
        });
        $(".dataTables_length select").select2({
            dropdownCssClass: 'noSearch'
        });
        $(".dataTables_filter input").unbind()
            .bind("input", function (e) {
                // Bind our desired behavior
                if (this.value.length >= 3 || e.keyCode == 13) {
                    $("#searchString").val(this.value);
                    oTable.fnDraw();
                }
                if (this.value == "") {
                    $("#searchString").val(this.value);
                    oTable.fnDraw();
                }
                return;
            });
    });
</script>
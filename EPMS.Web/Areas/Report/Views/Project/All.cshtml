@using System.Configuration
@using EPMS.WebModels.WebsiteModels.Common
@model IEnumerable<EPMS.WebModels.WebsiteModels.Project>
@{
    ViewBag.Title = EPMS.WebModels.Resources.Reports.Reports.ViewProjectReport;
    Layout = "~/Views/Shared/_Layout.cshtml";
    long reportId = ViewBag.ReportId != null ? (long) ViewBag.ReportId : 0;
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
    int serial = 1;
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="@(ConfigurationManager.AppSettings["SiteURL"].ToString())/Report/ProjectsAndTasks/Index">
                @EPMS.WebModels.Resources.Reports.Reports.ProjectManagementReportList
            </a>

        </li>
        <li class="current">
            @EPMS.WebModels.Resources.Reports.Reports.ViewProjectReport
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.WebModels.Resources.Reports.Reports.ProjectReport</small></h2>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal" id="validation_form">
    <div class="container-fluid" id="container">

        <script>
   
            $(document).ready(function() {
                $('#tableSortableResMed,#tableSortableResMed2').dataTable( {
                    "sPaginationType": "bootstrap",
                    "fnInitComplete": function(){
                        $(".dataTables_wrapper select").select2({
                            dropdownCssClass: 'noSearch'
                        });
                    }
                });
            });
        </script>


        <!--Input Field begin-->
        <div class="control-group row-fluid">
            <!--Sortable Responsive Media Table begin-->
            <div class="row-fluid">
                <div class="span12">
                    <table class="table table-striped table-responsive" id="tableSortableResMed">
                        <thead class="cf sorthead">
                            <tr>
                                <th>@EPMS.WebModels.Resources.Shared.Common.Serial</th>
                                <th>@EPMS.WebModels.Resources.Reports.Reports.ProjectName</th>
                                <th>@EPMS.WebModels.Resources.Reports.Project.Price</th>
                                <th>@EPMS.WebModels.Resources.Reports.Project.Cost</th>
                                <th>@EPMS.WebModels.Resources.Reports.Project.StartDate</th>
                                <th>@EPMS.WebModels.Resources.Reports.Project.DeliveryDate</th>
                                <th>@EPMS.WebModels.Resources.Reports.Project.CustomerName</th>
                                <th>@EPMS.WebModels.Resources.Reports.Project.Status</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var project in Model)
                            {
                                <tr class="gradeX">

                                    <td>@(serial++)</td>
                                    <td>@(direction == "ltr" ? project.NameE : project.NameA)</td>
                                    <td>
                                        @project.Price
                                    </td>
                                    <td>
                                        @project.OtherCost
                                    </td>
                                    <td>
                                        @project.StartDate
                                    </td>
                                    <td>
                                        @project.EndDate
                                    </td>
                                    <td>
                                        @(direction == "ltr" ? project.CustomerNameE : project.CustomerNameA)
                                    </td>
                                    <td>
                                        @((ProjectStatus)project.Status)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--Input Field end-->

        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <a class="btn" href="~/Report/Project/GeneratePdfAll?ReportId=@reportId">@EPMS.WebModels.Resources.Reports.Reports.GenerateReportAsPDF</a>
            </div>

        </div>
    </div><!-- end form -->
</form>
<script src="~/Scripts/jsPDF/jsPDF.js"></script>
<script src="~/Scripts/html2canvas.js"></script>
<script>

    (function () {
        var
         form = $('#container'),
         cache_width = form.width(),
         a4 = [595.28, 841.89];  // for a4 size paper width and height

        $('#generatePDF').on('click', function () {
            $('body').scrollTop(0);
            createPDF();
        });
        //create pdf
        function createPDF() {
            getCanvas().then(function (canvas) {
                var
                img = canvas.toDataURL("image/png"),
                doc = new jsPDF({
                    unit: 'px',
                    format: 'a4'
                });
                doc.addImage(img, 'JPEG', 20, 20);
                doc.save('Project-Report.pdf');
                form.width(cache_width);
            });
        }

        // create canvas object
        function getCanvas() {
            form.width((a4[0] * 1.33333) - 80).css('max-width', 'none');
            return html2canvas(form, {
                imageTimeout: 2000,
                removeContainer: true
            });
        }
    }());
</script>


@using System.Configuration
@model EPMS.WebModels.ViewModels.Reports.QuotationOrderReportCreateViewModel
@{
    ViewBag.Title = EPMS.WebModels.Resources.Reports.Reports.QOCreateReport;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="@(ConfigurationManager.AppSettings["SiteURL"].ToString())/Report/QuotationOrder/Index">
                @EPMS.WebModels.Resources.Reports.CustomerServiceList.Title
            </a>

        </li>
        <li class="current">
            @EPMS.WebModels.Resources.Reports.Reports.QOCreateReport
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.WebModels.Resources.Reports.Reports.QOCreateReport</small></h2>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
@using (Html.BeginForm("Create", "QuotationOrder", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container-fluid">
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">
                    @EPMS.WebModels.Resources.Reports.QuotationInvoice.StartDate<a href="javascript:;" class="bootstrap-tooltip" data-placement="top" data-original-title="(dd/mm/yyyy)"><i class="icon-photon info-circle"></i></a>
                </label>
            </div>
            <div class="span2">
                <div class="controls">
                    @Html.TextBoxFor(model => model.StartDate, new { @class = "col-lg-2 datepickerGregorian form-control cursorHand toBeDiable", @id = "StartDate", @readonly = "readonly" })
                </div>
            </div>
        </div>

        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">
                    @EPMS.WebModels.Resources.Reports.QuotationInvoice.EndDate<a href="javascript:;" class="bootstrap-tooltip" data-placement="top" data-original-title="(dd/mm/yyyy)"><i class="icon-photon info-circle"></i></a>
                </label>
            </div>
            <div class="span2">
                <div class="controls">
                    @Html.TextBoxFor(model => model.EndDate, new { @class = "col-lg-2 datepickerGregorian form-control cursorHand toBeDiable", @id = "EndDate", @readonly = "readonly" })
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label">
                    @EPMS.WebModels.Resources.Reports.Reports.CustomerName
                </label>
            </div>
            <div class="span2">
                <div class="controls">
                    @(direction == "ltr" ? Html.DropDownListFor(x => x.CustomerId, new SelectList(Model.Customers, "CustomerId", "CustomerNameE"), @EPMS.WebModels.Resources.Reports.QuotationInvoice.All, new {@class = "select2me", id = "CustomerId"}) : Html.DropDownListFor(x => x.CustomerId, new SelectList(Model.Customers, "CustomerId", "CustomerNameA"), @EPMS.WebModels.Resources.Reports.QuotationInvoice.All, new {@class = "select2me", id = "CustomerId"}))
                </div>
            </div>
        </div>
        
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn">@EPMS.WebModels.Resources.Reports.Reports.GenerateReport</button>
            </div>

        </div>

    </div>
}

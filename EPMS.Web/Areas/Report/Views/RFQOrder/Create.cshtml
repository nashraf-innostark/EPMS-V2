@model EPMS.WebModels.ViewModels.Reports.RfqOrderCreateViewModel

@{
    ViewBag.Title = EPMS.WebModels.Resources.Reports.RfqOrder.CreatePageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}

<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="#">
                @EPMS.WebModels.Resources.Reports.RfqOrder.CustomerServiceReportList
            </a>
        </li>
        <li class="current">
            <a href="javascript:;">@EPMS.WebModels.Resources.Reports.RfqOrder.Header</a>
        </li>
    </ul>
</div>
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.WebModels.Resources.Reports.RfqOrder.Header</small></h2>
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

<form class="form-horizontal" id="validation_form">
    <div class="container-fluid">
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DateOfBirth">@EPMS.WebModels.Resources.Reports.RfqOrder.StartDate <a href="javascript:;" class="bootstrap-tooltip" data-placement="top" data-original-title="(dd/mm/yyyy)"><i class="icon-photon info-circle"></i></a></label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.StartDate, new { @class = "datepickerGregorian cursorHand span3", @id = "StartDateE", @readonly = true, @placeholder = "Gregorian", onchange = "GregorianToHijri(this,'#StartDateA')" })
                    @Html.TextBox("Start Date", null, new { @class = "datepickerArabic cursorHand span3 marginForDatesLeft", @id = "StartDateA", @readonly = true, @placeholder = "Hijri", onchange = "HijriToGregorian(this,'#StartDateE')" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="DateOfBirth">@EPMS.WebModels.Resources.Reports.RfqOrder.EndDate <a href="javascript:;" class="bootstrap-tooltip" data-placement="top" data-original-title="(dd/mm/yyyy)"><i class="icon-photon info-circle"></i></a></label>
            </div>
            <div class="span9">
                <div class="controls">
                    @Html.TextBoxFor(model => model.EndDate, new { @class = "datepickerGregorian cursorHand span3", @id = "EndDateE", @readonly = true, @placeholder = "Gregorian", onchange = "GregorianToHijri(this,'#EndDateA')" })
                    @Html.TextBox("Start Date", null, new { @class = "datepickerArabic cursorHand span3 marginForDatesLeft", @id = "EndDateA", @readonly = true, @placeholder = "Hijri", onchange = "HijriToGregorian(this,'#EndDateE')" })
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="jobTitle">@EPMS.WebModels.Resources.Reports.RfqOrder.CustomerName </label>
            </div>
            <div class="span2">
                <div class="controls">
                    @(direction == "ltr" ? Html.DropDownListFor(model => model.CustomerId, new SelectList(Model.Customers, "CustomerId", "CustomerNameE"), "--Select--", new { @class = "select2me", @id = "Customer" }) :
                            Html.DropDownListFor(model => model.CustomerId, new SelectList(Model.Customers, "CustomerId", "CustomerNameA"), "--Select--", new { @class = "select2me", @id = "Customer" }))
                </div>
            </div>
        </div>
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="button" class="btn">@EPMS.WebModels.Resources.Reports.RfqOrder.GenerateReport</button>
            </div>
        </div>
    </div><!-- end container -->
</form>

<script>
    $(document).ready(function () {
        
    });
</script>
@using System.Configuration
@model EPMS.WebModels.ViewModels.Reports.ItemReportCreateViewModel
@{
    ViewBag.Title = EPMS.WebModels.Resources.Reports.Reports.ItemCreateReport;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li>
            <a href="@(ConfigurationManager.AppSettings["SiteURL"].ToString())/Report/Inventory/Index">
                @EPMS.WebModels.Resources.Reports.Reports.InventorySystemReportList
            </a>

        </li>
        <li class="current">
            @EPMS.WebModels.Resources.Reports.Reports.ItemCreateReport
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.WebModels.Resources.Reports.Reports.ItemCreateReport</small></h2>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->

@using (Html.BeginForm("Create", "Item", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container-fluid">

        <div class="control-group row-fluid">
            <div class="span3">
                <label class="control-label" for="jobTitle">@EPMS.WebModels.Resources.Reports.Reports.ItemName</label>
            </div>
            <div class="span2">
                <div class="controls">
                    @Html.DropDownListFor(model => model.ItemId, @direction == "ltr" ? new SelectList(Model.InventoryItems, "ItemId", "ItemNameE") : new SelectList(Model.InventoryItems, "ItemId", "ItemNameA"), @EPMS.WebModels.Resources.Reports.Reports.All, new { @class = "select2me" })
                </div>
            </div>

        </div>
        <div class="control-group row-fluid">
            <div class="span3 span-inset">
                <button type="submit" class="btn">@EPMS.WebModels.Resources.Reports.Reports.GenerateReport</button>
            </div>

        </div>
    </div>
    <!-- end container -->
}
@using System.Configuration
@model EPMS.WebModels.ViewModels.Reports.ListViewModel
@{
    ViewBag.Title = EPMS.WebModels.Resources.Reports.Reports.ProjectManagementReportList;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var direction = EPMS.WebModels.Resources.Shared.Common.TextDirection;
}
<!-- Navigation Bar Start-->
<div class="breadcrumb-container">
    <ul class="xbreadcrumbs">
        <li>
            <a href="~/Dashboard/Index">
                <i class="icon-photon home"></i>
            </a>
        </li>
        <li class="current">
            @EPMS.WebModels.Resources.Reports.Reports.ProjectManagementReportList
        </li>
    </ul>
</div>
<!-- Navigation Bar End-->
<!-- Page Heading Start-->
<header>
    <i class="icon-big-notepad"></i>
    <h2><small>@EPMS.WebModels.Resources.Reports.Reports.ProjectManagementReportListPageHeading</small></h2>
</header>
<!-- Page Heading End-->
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
<form class="form-horizontal" id="validation_form">
    <div class="container-fluid">
        <!--Tabs begin-->
        <div class="control-group row-fluid span-inset">
            <ul class="nav nav-tabs" id="myTab">
                <li class="active"><a data-toggle="tab" href="#tab-example1">@EPMS.WebModels.Resources.Reports.Reports.ProjectsReport</a></li>
                <li class=""><a data-toggle="tab" href="#tab-example2">@EPMS.WebModels.Resources.Reports.Reports.TasksReport</a></li>
            </ul>
            <div class="tab-content">
                <div id="tab-example1" class="tab-pane fade active in">
                    <h3>
                        <small>
                            <a href="@(ConfigurationManager.AppSettings["SiteURL"].ToString())/Report/Project/Create">@EPMS.WebModels.Resources.Reports.Reports.CreatProjectReport</a>
                        </small>
                    </h3>
                    <div class="container-fluid">
                        @Html.HiddenFor(model => model.ProjectReportSearchRequest.SearchString, new { id = "searchString" })
                        <div class="row-fluid">
                            <div class="span12">
                                <table id="projectsTable" class="table table-striped table-responsive" style="width: 100% !important;">
                                    <thead>
                                        <tr>
                                            <th>@EPMS.WebModels.Resources.Shared.Common.Serial</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Report</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Createdby</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Date</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Type</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.ReportDate</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- end container -->
                </div>
                <div id="tab-example2" class="tab-pane fade">
                    <h3> <small><a href="~/Report/Task/Create">Create Task Report</a></small></h3>
                    <div class="container-fluid">
                        <div class="row-fluid">
                            <div class="span12">
                                <table class="table table-striped table-responsive" id="tasksTable">
                                    <thead class="cf sorthead">
                                        <tr>
                                            <th>@EPMS.WebModels.Resources.Shared.Common.Serial</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Report</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Createdby</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Date</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.Type</th>
                                            <th>@EPMS.WebModels.Resources.Reports.Reports.ReportDate</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- end container -->
                </div>
            </div>
        </div>
        <!--Tabs end-->
    </div><!--end container-->
</form>
<script type="text/javascript">
    var oTable;
    var tasksTable;
    $(document).ready(function () {
        var siteUrl = $('#siteURL').val();
        var dir = '@direction';
        oTable = $('#projectsTable').dataTable({
            "sPaginationType": "bootstrap",
            "bProcessing": true,
            "bServerSide": true,
            "aoColumns": [
                {
                    "aTargets": [0],
                    "sDefaultContent": "",
                    "bVisible": true,
                    "bSortable": false
                },
                {
                    "aTargets": [1],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        var projectId = full["ProjectId"];
                        var val = full["ReportId"];
                        if (parseInt(projectId) > 0) {
                            return '<a href="' + siteUrl + '/Report/Project/Details?ReportId=' + val + '">' + val + '</a>';
                        }
                        else {
                            return '<a href="' + siteUrl + '/Report/Project/All?ReportId=' + val + '">' + val + '</a>';
                        }
                    }
                },
                {
                    "aTargets": [2],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportCreatedByName"];
                    }
                },
                {
                    "aTargets": [3],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportFromDateString"] + "-" + full["ReportToDateString"];
                    }
                },
                {
                    "aTargets": [4],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportCategoryItemTitle"];
                    }
                },
                {
                    "aTargets": [5],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportCreatedDateString"];
                    }
                }
            ],
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "search", "value": $('input').val() });
            },
            "sAjaxSource": siteUrl + "/Report/ProjectsAndTasks/Index",
            "sServerMethod": "POST",
            "oLanguage": {
                "sProcessing": "Fetching record(s)",
                //"sProcessing": "<img alt=\"Unread\" id=\"ajaxLoadImg\" src=\"/Images\/Gallery\/ajax_loader_red_512.gif\" />",
                "sInfoEmpty": "No matching record(s) found",
                "sEmptyTable": "No record(s) found",
            },
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                var oSettings = oTable.fnSettings();
                $("td:first", nRow).html(oSettings._iDisplayStart + iDisplayIndex + 1);
                return nRow;
            },
        });
        oTable.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).fnDraw();
        $(".dataTables_length select").select2({
            dropdownCssClass: 'noSearch'
        });

        $(".dataTables_filter input").unbind()
            .bind("input", function (e) {
                // Bind our desired behavior
                if (this.value.length >= 1 || e.keyCode == 13) {
                    $("#searchString").val(this.value);
                    oTable.fnDraw();
                }
                if (this.value == "") {
                    $("#searchString").val(this.value);
                    oTable.fnDraw();
                }
                return;
            });

        tasksTable = $('#tasksTable').dataTable({
            "sPaginationType": "bootstrap",
            "bProcessing": true,
            "bServerSide": true,
            "aoColumns": [
                {
                    "aTargets": [0],
                    "sDefaultContent": "",
                    "bVisible": true,
                    "bSortable": false
                },
                {
                    "aTargets": [1],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        var ProjectId = full["ProjectId"];
                        var val = full["ReportId"];
                        //return '<a href="' + siteUrl + '/Report/Task/Details?ReportId=' + val + '">' + val + '</a>';
                        if (parseInt(ProjectId) > 0) {
                            return '<a href="' + siteUrl + '/Report/Task/Details?ReportId=' + val + '">' + val + '</a>';
                        }
                        else {
                            return '<a href="' + siteUrl + '/Report/Task/All?ReportId=' + val + '">' + val + '</a>';
                        }
                    }
                },
                {
                    "aTargets": [2],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportCreatedByName"];
                    }
                },
                {
                    "aTargets": [3],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportFromDateString"] + "-" + full["ReportToDateString"];
                    }
                },
                {
                    "aTargets": [4],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportCategoryItemTitle"];
                    }
                },
                {
                    "aTargets": [5],
                    "sDefaultContent": "No Data",
                    "mRender": function (data, type, full) {
                        return full["ReportCreatedDateString"];
                    }
                }
            ],
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "search", "value": $('input').val() });
            },
            "sAjaxSource": siteUrl + "/Report/ProjectsAndTasks/TaskIndex",
            "sServerMethod": "POST",
            "oLanguage": {
                "sProcessing": "Fetching record(s)",
                //"sProcessing": "<img alt=\"Unread\" id=\"ajaxLoadImg\" src=\"/Images\/Gallery\/ajax_loader_red_512.gif\" />",
                "sInfoEmpty": "No matching record(s) found",
                "sEmptyTable": "No record(s) found",
            },
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                var oSettings = tasksTable.fnSettings();
                $("td:first", nRow).html(oSettings._iDisplayStart + iDisplayIndex + 1);
                return nRow;
            },
        });
        tasksTable.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).fnDraw();
        $(".dataTables_length select").select2({
            dropdownCssClass: 'noSearch'
        });

        $(".dataTables_filter input").unbind()
            .bind("input", function (e) {
                // Bind our desired behavior
                if (this.value.length >= 1 || e.keyCode == 13) {
                    $("#searchString").val(this.value);
                    tasksTable.fnDraw();
                }
                if (this.value == "") {
                    $("#searchString").val(this.value);
                    tasksTable.fnDraw();
                }
                return;
            });
    });
</script>

